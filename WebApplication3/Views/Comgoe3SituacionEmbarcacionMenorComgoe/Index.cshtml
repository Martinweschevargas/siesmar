@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>
            <a href="~/Comgoe3SituacionEmbarcacionMenorComgoe" style="text-decoration:none;">
                Situación de embarcaciones menores
            </a>
        </h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/Comgoe3SituacionEmbarcacionMenorComgoe/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/Comgoe3SituacionEmbarcacionMenorComgoe/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Mostrar Datos"</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Enviar Datos a BD</button>
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre unidad</th>
                                    <th>Categoría</th>
                                    <th>Tipo de plataforma</th>
                                    <th>Dependencia/Destino</th>
                                    <th>Ubicación</th>
                                    <th>Departamento</th>
                                    <th>Provincia</th>
                                    <th>Distrito</th>
                                    <th>Capacidad operativa requerida</th>
                                    <th>Condición</th>
                                    <th>Observaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/comgoe3/comgoe3-situacionembarcacionmenorcomgoe.js" asp-append-version="true"></script>
}