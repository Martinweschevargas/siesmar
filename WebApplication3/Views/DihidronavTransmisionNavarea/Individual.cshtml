@{
    ViewData["Title"] = "Transmision Navarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DihidronavTransmisionNavarea/Individual" style="text-decoration:none;">Transmisión de Navareas (Para navegantes en general en el área XVI, por sistema Inmarsat y Sistema Navtex)</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Orden" class="col-3 col-form-label">N° Orden</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOrden" name="txtOrden" placeholder="N° Orden" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Producto" class="col-3 col-form-label">N° Navarea</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtProducto" name="txtProducto" placeholder="N° Navarea" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Radioaviso" class="col-3 col-form-label">Radioaviso Nautico</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtRadioaviso" name="txtRadioaviso" placeholder="Radioaviso Nautico" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaEmi" class="col-3 col-form-label">Fecha de Emision</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmi" name="txtFechaEmi" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Promotor" class="col-3 col-form-label">Promotor</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPromotor" name="txtPromotor" placeholder="Promotor" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaTer" class="col-3 col-form-label">Fecha de Termino</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaTer" name="txtFechaTer" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DihidronavTransmisionNavarea">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Orden" class="col-3 col-form-label">N° Orden</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOrdene" name="txtOrdene" placeholder="N° Orden" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Producto" class="col-3 col-form-label">N° Navarea</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtProductoe" name="txtProductoe" placeholder="N° Navarea" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Radioaviso" class="col-3 col-form-label">Radioaviso Nautico</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtRadioavisoe" name="txtRadioavisoe" placeholder="Radioaviso Nautico" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaEmi" class="col-3 col-form-label">Fecha de Emision</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmie" name="txtFechaEmie" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Promotor" class="col-3 col-form-label">Promotor</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPromotore" name="txtPromotore" placeholder="Promotor" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaTer" class="col-3 col-form-label">Fecha de Termino</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaTere" name="txtFechaTere" required>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-primary">Grabar</button>
                    </div>
                    <div class="col-md-6 text-center">
                        <a class="btn btn-danger" href="~/DihidronavTransmisionNavarea">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDihidronavTransmisionNavarea()" />
    <div class="dropdown">
        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Modos de Carga :
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="~/DihidronavTransmisionNavarea">Masiva</a>
            <a class="dropdown-item" href="~/DihidronavTransmisionNavarea/Individual">Individual</a>
        </div>
    </div>
    <table class="table table-striped" id="tblDihidronavTransmisionNavarea" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>N° Orden</th>
                <th>N° Navarea</th>
                <th>Radioaviso Nautico</th>
                <th>Fecha de Emision</th>
                <th>Promotor</th>
                <th>Fecha de Termino</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dihidronav/dihidronav-transmisionnavarea.js" asp-append-version="true"></script>
}
