@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/DiresnaPoblacionEscuelaNaval" style="text-decoration:none;">Población Escuela Naval</a></h1>
        <div class="card">
            <div class="card-header">
                <a href="~/DiresnaPoblacionEscuelaNaval/Individual" class="btn btn-primary">Ir Carga Individual</a>
                <a href="~/DiresnaPoblacionEscuelaNaval/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-2">
                            <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>DNI</th>
                                    <th>Género</th>
                                    <th>Fecha Nacimiento</th>
                                    <th>Talla</th>
                                    <th>Peso</th>
                                    <th>Lugar de Nacimiento</th>
                                    <th>Lugar Domicilio Actual</th>
                                    <th>Fecha de Ingreso</th>
                                    <th>Becado a la ESNA</th>
                                    <th>Lugar de Procedencia del Becado</th>
                                    <th>Año académico</th>
                                    <th>Semestre Académico</th>
                                    <th>Índice de Rendimiento Académico (IRAS)</th>
                                    <th>Nota Carácter Militar</th>
                                    <th>Nota Formación Física</th>
                                    <th>Nota Conducta</th>
                                    <th>Índice de Rendimiento General (IRGS)</th>
                                    <th>ndice de Rendimiento General Acumulado (IRGA)</th>
                                    <th>Orden Mérito</th>
                                    <th>Resultado al Término del Semestre</th>
                                    <th>Causas de Baja</th>
                                    <th>Concurso de Admisión por el que Ingreso</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<div class="modal fade" id="ventanaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
                    <div class="card" style="width: 100%;">
                        <div class="card-header nuevo">
                            <h4>Reportes - DIRESNA</h4>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" onclick="optReporte(1)">
                            <label class="form-check-label" for="flexRadioDefault1">
                                POBLACION ESCUELA NAVAL
                            </label>
                        </div>
                        <div class="form-group row col-md-6">
                            <label for="carga" class="col-3 col-form-label">Carga</label>
                            <div class="form-group row col-md-6">
                                <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6 text-center">
                                <input type='button' id="btnReportView" value="Ver" class="btn btn-primary align-self-end">
                                <button type="button" class="btn btn-danger align-self-end" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal1-footer">
            <button type="button" class="btn" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/diresna/diresna-poblacionescuelanaval.js" asp-append-version="true"></script>
}