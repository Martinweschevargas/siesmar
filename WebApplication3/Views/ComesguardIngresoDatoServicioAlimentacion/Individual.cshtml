@{
    ViewData["Title"] = "Formato para el ingreso de datos del servicio de alimentación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <a href="~/ComesguardIngresoDatoServicioAlimentacion/Individual" style="text-decoration:none;">
        Formato para el ingreso de datos del servicio de alimentación
    </a>
</h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
