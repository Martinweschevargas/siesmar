@{
    ViewData["Title"] = "Alistamiento de Material";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ComesclaAlistamientoMaterial/Individual" style="text-decoration:none;">Alistamiento de Material</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="CapacidadOperativa" class="col-3 col-form-label"><a href="~/CapacidadOperativa">Capacidad Operativa</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCapacidadOperativa" name="cbCapacidadOperativa"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Requerido" class="col-3 col-form-label">Requerido</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtRequerido" name="txtRequerido" placeholder="Requerido" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Operativo" class="col-3 col-form-label">Operativo</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOperativo" name="txtOperativo" placeholder="Operativo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PorcentajeOperatividad" class="col-3 col-form-label">Porcentaje Operatividad</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtPorcentajeOperatividad" name="txtPorcentajeOperatividad" data-placeholder="Seleccione ...">
                            <option value="OC">Operativo completamente listo (76% al 100%)</option>
                            <option value="OL">Operativo con limitaciones (51% al 75%)</option>
                            <option value="NO">No operativo (0% al 50%)</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapacidadIntrinseca" class="col-3 col-form-label">Capacidad Intrinseca I Nivel</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCapacidadIntrinseca" name="txtCapacidadIntrinseca" placeholder="Capacidad Intrinseca I Nivel" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Ponderado1N" class="col-3 col-form-label">Ponderación Capacidad Intrínseca I Nivel</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPonderado1N" name="txtPonderado1N" placeholder="Ponderación Capacidad Intrínseca I Nivel" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Subclasificacion2" class="col-3 col-form-label">Sub-Clasificación II Nivel</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSubclasificacion2" name="txtSubclasificacion2" placeholder="Sub-Clasificación II Nivel" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Ponderado2Nivel" class="col-3 col-form-label">Ponderación Capacidad Intrínseca II Nivel</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPonderado2Nivel" name="txtPonderado2Nivel" placeholder="Ponderación Capacidad Intrínseca II Nivel" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Subclasificacion3" class="col-3 col-form-label">Sub-Clasificación III Nivel</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSubclasificacion3" name="txtSubclasificacion3" placeholder="Sub-Clasificación III Nivel" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistamientoMaterialRequerido3N" class="col-3 col-form-label"><a href="~/AlistamientoMaterialRequerido3N">Ponderación Capacidad Intrínseca III Nivel</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistamientoMaterialRequerido3N" name="cbAlistamientoMaterialRequerido3N"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComesclaAlistamientoMaterial">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
