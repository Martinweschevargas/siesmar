    <div class="dropdown">
        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Modos de Carga :
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="~/ComestreEjercicioTipoArmaMenorComestre">Masiva</a>
            <a class="dropdown-item" href="~/ComestreEjercicioTipoArmaMenorComestre/Individual">Individual</a>
        </div>
    </div>
    <table class="table table-striped" id="tblComestreEjercicioTipoArmaMenorComestre" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Especialidad Generica del Personal</th>
                <th>Grado</th>
                <th>Fecha</th>
                <th>Tipo de Armamento Menor</th>
                <th>Posicion</th>
