@{
    ViewData["Title"] = "Ejercicio Tipo Arma Menor Comestre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/ComestreEjercicioTipoArmaMenorComestre/Individual" style="text-decoration:none;">Ejercicios de Tiro con Armas Menores</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Especialidad" class="col-3 col-form-label"><a href="~/EspecialidadGenericaPersonal">Especialidad Generica del Personal</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbEspecialidad" name="cbEspecialidad"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Grado" class="col-3 col-form-label"><a href="~/GradoPersonalMilitar">Grado</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGrado" name="cbGrado"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Fecha" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Armamento" class="col-3 col-form-label"><a href="~/TipoArmamento">Tipo de Armamento Menor</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbArmamento" name="cbArmamento"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Posicion" class="col-3 col-form-label">Posicion</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtPosicion" name="txtPosicion" data-placeholder="Seleccione ...">
                            <option value="1">Pie a un brazo extendido</option>
                            <option value="2">Pie a dos brazos extendidos</option>
                            <option value="3">Arma en ristre, de pie a dos brazos extendidos</option>
                            <option value="4">Tendido con apoyo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Distancia" class="col-3 col-form-label">Distancia mts</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtDistancia" name="txtDistancia" placeholder="Distancia mts" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Cantidad" class="col-3 col-form-label">Cantidad de Tiro</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtCantidad" name="txtCantidad" placeholder="Cantidad de Tiro" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComestreEjercicioTipoArmaMenorComestre">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
