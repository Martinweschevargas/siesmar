@{
    ViewData["Title"] = "Comisiones de audiovisuales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <a href="~/DimarComisionAudiovisual/Individual" style="text-decoration:none;">
        Comisiones de audiovisuales
    </a>
</h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaComisionAudiovisual" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaComisionAudiovisual" name="txtFechaComisionAudiovisual" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalComision" class="col-3 col-form-label"><a href="~/PersonalComision">Personal en comisión</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalComision" name="cbPersonalComision"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependencia" name="cbDependencia"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Motivo" class="col-3 col-form-label">Motivo</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMotivo" name="txtMotivo" placeholder="Motivo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Comision" class="col-3 col-form-label"><a href="~/Comision">Tipo de comisión</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbComision" name="cbComision"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Costo" class="col-3 col-form-label">Costo (S/.)</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCosto" name="txtCosto" placeholder="Costo (S/.)" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarComisionAudiovisual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="FechaComisionAudiovisual" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaComisionAudiovisuale" name="txtFechaComisionAudiovisuale" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalComision" class="col-3 col-form-label"><a href="~/PersonalComision">Personal en comisión</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalComisione" name="cbPersonalComisione"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependenciae" name="cbDependenciae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Motivo" class="col-3 col-form-label">Motivo</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMotivoe" name="txtMotivoe" placeholder="Motivo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Comision" class="col-3 col-form-label"><a href="~/Comision">Tipo de comisión</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbComisione" name="cbComisione"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Costo" class="col-3 col-form-label">Costo (S/.)</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCostoe" name="txtCostoe" placeholder="Costo (S/.)" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarComisionAudiovisual/Individual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DimarComisionAudiovisual" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDimarComisionAudiovisual()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>
    </div>
    <table class="table table-striped" id="tblDimarComisionAudiovisual" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha</th>
                <th>Personal en comisión</th>
                <th>Dependencia solicitante</th>
                <th>Motivo</th>
                <th>Tipo de comisión</th>
                <th>Costo (S/.)</th>
                <th>Codigo Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dimar/dimar-comisionaudiovisual.js" asp-append-version="true"></script>
}
