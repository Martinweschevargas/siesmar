@{
    ViewData["Title"] = "FormatoReporteSubordinado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FormatoReporteSubordinados</h1>

<div id="nuevo" style="display:none;">
    <h4>Nuevo</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label" for="FormatoReporte"> Formato Reporte</label>
                <select class="form-select form-select-sm" id="cbFormatoReporte" name="cbFormatoReporte" data-placeholder="Formato Reporte ..."></select>
            </div>
            <div class="form-group">
                <label class="control-label" for="DependenciaSubordinado"> Dependencia Subordinado</label>
                <select class="form-select form-select-sm" id="cbDependenciaSubordinado" name="cbDependenciaSubordinado" data-placeholder="Dependencia Subordinado ..."></select>
            </div>
            <div class="form-group">
                <input type="button" value="Grabar" class="btn btn-primary" onclick="registrar()" />
            </div>
        </div>
        <div class="loader" id="loader-6" style="display:none;">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <p><a class="btn btn-danger" href="~/FormatoReporteSubordinado">Cancelar</a></p>
</div>
<div id="editar" style="display:none;">
    <h4>Editar</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" id="txtCodigo" name="txtCodigo" value="" />
            <div class="form-group">
                <label class="control-label" for="FormatoReporte"> Formato Reporte</label>
                <select class="form-select form-select-sm" id="cbFormatoReportee" name="cbFormatoReportee" data-placeholder="Formato Reporte ..."></select>
            </div>
            <div class="form-group">
                <label class="control-label" for="DependenciaSubordinado"> Dependencia Subordinado</label>
                <select class="form-select form-select-sm" id="cbDependenciaSubordinadoe" name="cbDependenciaSubordinadoe" data-placeholder="Dependencia Subordinado ..."></select>
            </div>
            <div class="form-group">
                <input type="button" value="Grabar" class="btn btn-primary" onclick="actualizarFormatoReporteSubordinado()" />
            </div>
        </div>
        <div class="loader" id="loader-6" style="display:none;">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <p><a class="btn btn-danger" href="~/FormatoReporteSubordinado">Cancelar</a></p>
</div>
<div id="listar">
    <div class="form-group">
        <input type="button" value="Crear" class="btn btn-primary" onclick="nuevoFormatoReporteSubordinado()" />
    </div>

    <table class="display" id="tblFormatoReporteSubordinados">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Formato Reporte</th>
                <th>Dependencia Subordinado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section Scripts{
    <script src="/js/seguridad/formatoreportesubordinado.js" asp-append-version="true"></script>
}