@{
    ViewData["Title"] = "Servicio Construccion Instalacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DihidronavServicioConstruccionInstalacion/Individual" style="text-decoration:none;">Servicios de Construcción, Instalación, mantenimiento de señales náuticas</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select-sm form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Orden" class="col-3 col-form-label">N° Orden</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOrden" name="txtOrden" placeholder="N° Orden" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Servicio" class="col-3 col-form-label"><a href="~/TrabajoSenializacionNautica">Servicio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbServicio" name="cbServicio"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Descripcion" class="col-3 col-form-label">Descripcion del Servicio</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDescripcion" name="txtDescripcion" placeholder="Descripcion del Servicio" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaIni" class="col-3 col-form-label">Fecha de Inicio del Servicio</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaIni" name="txtFechaIni" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaTer" class="col-3 col-form-label">Fecha de Termino del Servicio</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaTer" name="txtFechaTer" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Zona" class="col-3 col-form-label"><a href="~/ZonaNautica">Zona</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbZona" name="cbZona"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Estado" class="col-3 col-form-label">Estado</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstado" name="txtEstado" data-placeholder="Seleccione ...">
                            <option value="Operativo">Operativo</option>
                            <option value="Inoperativo">Inoperativo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DihidronavServicioConstruccionInstalacion">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Orden" class="col-3 col-form-label">N° Orden</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOrdene" name="txtOrdene" placeholder="N° Orden" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Servicio" class="col-3 col-form-label"><a href="~/TrabajoSenializacionNautica">Servicio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbServicioe" name="cbServicioe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Descripcion" class="col-3 col-form-label">Descripcion del Servicio</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDescripcione" name="txtDescripcione" placeholder="Descripcion del Servicio" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaIni" class="col-3 col-form-label">Fecha de Inicio del Servicio</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaInie" name="txtFechaInie" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaTer" class="col-3 col-form-label">Fecha de Termino del Servicio</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaTere" name="txtFechaTere" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Zona" class="col-3 col-form-label"><a href="~/ZonaNautica">Zona</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbZonae" name="cbZonae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Estado" class="col-3 col-form-label">Estado</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoe" name="txtEstadoe" data-placeholder="Seleccione ...">
                            <option value="Operativo">Operativo</option>
                            <option value="Inoperativo">Inoperativo</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DihidronavServicioConstruccionInstalacion" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDihidronavServicioConstruccionInstalacion()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>

    </div>
    <table class="table table-striped" id="tblDihidronavServicioConstruccionInstalacion" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>N° Orden</th>
                <th>Servicio</th>
                <th>Descripcion del Servicio</th>
                <th>Fecha de Inicio del Servicio</th>
                <th>Fecha de Termino del Servicio</th>
                <th>Zona</th>
                <th>Estado</th>
                <th>Código Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dihidronav/dihidronav-servicioconstruccioninstalacion.js" asp-append-version="true"></script>
}
