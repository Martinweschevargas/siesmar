@{
    ViewData["Title"] = "Servicio Social Brindado al Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/BienestarServicioSocialBrindado/Individual" style="text-decoration:none;">Servicio Social Brindado al Personal</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="FechaSolicitud" class="col-3 col-form-label">Fecha Solicitud</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaSolicitud" name="txtFechaSolicitud" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIPersonal" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtDNIPersonal" name="txtDNIPersonal" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalSolicitante" class="col-3 col-form-label"><a href="~/PersonalSolicitante">Personal Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalSolicitante" name="cbPersonalSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionSolicitante" class="col-3 col-form-label"><a href="~/CondicionSolicitante">Condición del Personal</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionSolicitante" name="cbCondicionSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalBeneficiado" class="col-3 col-form-label"><a href="~/PersonalBeneficiado">Personal Atendido(beneficiado)</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiado" name="cbPersonalBeneficiado"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoApoyoSocial" class="col-3 col-form-label"><a href="~/TipoApoyoSocial">Tipo de Apoyo Social Solicitado</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoApoyoSocial" name="cbTipoApoyoSocial"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoAtencion" class="col-3 col-form-label"><a href="~/TipoAtencion">Tipo de Atención</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoAtencion" name="cbTipoAtencion"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoEvaluacionSocial" class="col-3 col-form-label"><a href="~/TipoEvaluacionSocial">Tipo de Evaluación Social</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoEvaluacionSocial" name="cbTipoEvaluacionSocial"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="OtroTipoApoyo" class="col-3 col-form-label">Otros Tipo de Apoyo</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtOtroTipoApoyo" name="txtOtroTipoApoyo" data-placeholder="Seleccione ...">
                            <option value="Planes/programas/proyectos">Planes/programas/proyectos</option>
                            <option value="Informe de trabajos especiales">Informe de trabajos especiales</option>
                            <option value="Memorándums/cartas/otros">Memorándums/cartas/otros</option>
                            <option value="Ninguno">Ninguno</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ResultadoSolicitud" class="col-3 col-form-label">Resultado de Solicitud</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtResultadoSolicitud" name="txtResultadoSolicitud" data-placeholder="Seleccione ...">
                            <option value="Apoyo total">Apoyo total</option>
                            <option value="Apoyo parcial">Apoyo parcial</option>
                            <option value="No se aceptó solicitud">No se aceptó solicitud</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaResultadoSolicitud" class="col-3 col-form-label">Fecha Resultado de Solicitud</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaResultadoSolicitud" name="txtFechaResultadoSolicitud" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarServicioSocialBrindado">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
