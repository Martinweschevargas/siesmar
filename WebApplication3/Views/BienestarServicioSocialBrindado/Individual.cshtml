                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiadoe" name="cbPersonalBeneficiadoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoApoyoSocial" class="col-3 col-form-label"><a href="~/TipoApoyoSocial">Tipo de Apoyo Social Solicitado</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoApoyoSociale" name="cbTipoApoyoSociale"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoAtencion" class="col-3 col-form-label"><a href="~/TipoAtencion">Tipo de Atención</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoAtencione" name="cbTipoAtencione"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoEvaluacionSocial" class="col-3 col-form-label"><a href="~/TipoEvaluacionSocial">Tipo de Evaluación Social</a></label>
                    <div class="col-md-9">
