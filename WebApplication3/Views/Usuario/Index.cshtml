@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3><a href="/Usuario" style="text-decoration:none;">Usuarios</a></h3>

<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label class="col-3 col-form-label">Usuario</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbUsuarioe" name="cbUsuarioe" data-placeholder="Usuario ..."></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label class="col-3 col-form-label">Nivel Dependencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" onchange="mostrarCombo();" id="cbNivele" name="cbNivele" data-placeholder="Dependencia ...">
                            <option value="0">Ninguno</option>
                            <option value="1">2do Nivel</option>
                            <option value="2">3do Nivel</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label class="col-3 col-form-label">Flag</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="flage" name="flage" onchange="cambiarFormato()" data-placeholder="Seleccione ...">
                            <option value="1">Formato</option>
                            <option value="2">Mantenimiento</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6" id="2do" style="display:none;">
                    <label class="col-3 col-form-label">Dependencia 2do Nivel</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbDependenciae" onchange="cambiarFormato()" name="cbDependenciae" data-placeholder="Dependencia ..."></select>
                    </div>
                </div>
                <div class="form-group row col-md-6" id="3ro" style="display:none;">
                    <label class="col-3 col-form-label">Subordinada 3er Nivel</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbDependenciaSubordinadoe" onchange="cambiarFormato()" name="cbDependenciaSubordinadoe" data-placeholder="Dependencia Subordinado ..."></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label class="col-3 col-form-label">Menu</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbFormatoe" name="cbFormatoe" data-placeholder="Formato ..."></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/FormatoReporte">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="loader" id="loader-6" style="display:none;">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
</div>

<div id="listar" style="overflow:scroll">
    <table class="table table-striped" id="tblUsuarios" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Codigo</th>
                <th>Foto</th>
                <th>Nombres</th>
                <th>Nombre 1</th>
                <th>Nombre 2</th>
                <th>Nombre 3</th>
                <th>Nombres</th>
                <th>Nombre Completo</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>CIP</th>
                <th>Especialidad</th>
                <th>Calificación</th>
                <th>Tipo Persona</th>
                <th>Tipo Documento</th>
                <th>Documento</th>
                <th>Sexo</th>
                <th>Fecha Ingreso</th>
                <th>Ubigeo Old Domicilio</th>
                <th>Ubigeo Actual</th>
                <th>Correo Interno</th>
                <th>Correo Externo</th>
                <th>Telefono Fijo</th>
                <th>Telefono Celular</th>
                <th>Dependencia</th>
                <th>Grado Instrucción</th>
                <th>Rol</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section Scripts{
    <script src="/js/seguridad/usuario.js" asp-append-version="true"></script>
}
