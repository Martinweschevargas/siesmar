@{
    ViewData["Title"] = "Registo Equipo Conectividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DirtelRegistroEquipoConectividad/Individual" style="text-decoration:none;">Equipos de Conectividad</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select-sm form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label"><a href="~/ModeloBienServicioSubcampo">Subcampo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbSubcampo" name="cbSubcampo"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label"><a href="~/ModeloBienServicioDenominacion">Denominacion</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDenominacion" name="cbDenominacion"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Marca" class="col-3 col-form-label"><a href="~/Marca">Marca</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMarca" name="cbMarca"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Conectividad" class="col-3 col-form-label">Conectividad</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtConectividad" name="txtConectividad" data-placeholder="Seleccione ...">
                            <option value="1">Lan</option>
                            <option value="2">Wan</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Condicion" class="col-3 col-form-label">Condicion</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtCondicion" name="txtCondicion" data-placeholder="Seleccione ...">
                            <option value="1">Propio</option>
                            <option value="2">Alquilado</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NivelCapa" class="col-3 col-form-label">Nivel Capa</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtNivelCapa" name="txtNivelCapa" data-placeholder="Seleccione ...">
                            <option value="1">Capa 1</option>
                            <option value="2">Capa 2</option>
                            <option value="3">Capa 3</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Puerto" class="col-3 col-form-label">Puertos</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtPuerto" name="txtPuerto" data-placeholder="Seleccione ...">
                            <option value="1">Menor a 15</option>
                            <option value="2">Entre 15 a 28</option>
                            <option value="3">Mayor a 28</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AnioAdquisicion" class="col-3 col-form-label">Año de Adquisicion</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtAnioAdquisicion" name="txtAnioAdquisicion" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="EstadoOperatividad" class="col-3 col-form-label">Estado de Operatividad</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoOperatividad" name="txtEstadoOperatividad" data-placeholder="Seleccione ...">
                            <option value="1">Operativo</option>
                            <option value="2">Inoperativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependencia" name="cbDependencia"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Departamento" class="col-3 col-form-label"><a href="~/DepartamentoUbigeo">Departamento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDepartamento" name="cbDepartamento"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CodigoIBP" class="col-3 col-form-label">Codigo IBP</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtCodigoIBP" name="txtCodigoIBP" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DirtelRegistroEquipoConectividad">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
