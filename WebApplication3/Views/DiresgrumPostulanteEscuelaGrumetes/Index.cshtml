@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/DiresgrumPostulanteEscuelaGrumetes" style="text-decoration:none;">Postulantes a la Escuela de Grumetes</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DiresgrumPostulanteEscuelaGrumetes/Individual" class="btn btn-primary">Ir Carga Individual</a>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Mostrar Datos"</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Enviar Datos a BD</button>
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nombre Actividad</th>
                                    <th>Tipo Actividad</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Termino</th>
                                    <th>Lugar Actividad</th>
                                    <th>Auspiciadores</th>
                                    <th>Número participantes</th>
                                    <th>Inversión</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/diresgrum/diresgrum-postulanteescuelagrumetes.js" asp-append-version="true"></script>
}