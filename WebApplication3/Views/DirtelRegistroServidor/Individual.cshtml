@{
    ViewData["Title"] = "Registo Servidores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DirtelRegistroServidor/Individual" style="text-decoration:none;">Servidores</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select-sm form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="CodigoIBP" class="col-3 col-form-label">Código IBP</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoIBP" name="txtCodigoIBP" placeholder="Código IBP" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Subcampo" class="col-3 col-form-label"><a href="~/ModeloBienServicioSubcampo">Subcampo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbSubcampo" name="cbSubcampo"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label"><a href="~/ModeloBienServicioDenominacion">Denominación</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDenominacion" name="cbDenominacion"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Marca" class="col-3 col-form-label"><a href="~/Marca">Marca</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMarca" name="cbMarca"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapaMemoria" class="col-3 col-form-label">Capacidad Memoria Ram</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCapaMemoria" name="txtCapaMemoria" placeholder="Capacidad Memoria Ram" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapaDisco" class="col-3 col-form-label">Capacidad Disco Duro</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtCapaDisco" name="txtCapaDisco" data-placeholder="Seleccione ...">
                            <option value="1">2 GB</option>
                            <option value="2">4 GB</option>
                            <option value="3">Mas de 4 GB</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AnioAdquisicion" class="col-3 col-form-label">Año de Adquisición</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtAnioAdquisicion" name="txtAnioAdquisicion" placeholder="Año de Adquisición Computadora" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="EstadoOperatividad" class="col-3 col-form-label">Estado Operatividad Servidor</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoOperatividad" name="txtEstadoOperatividad" data-placeholder="Seleccione ...">
                            <option value="1">Operativo</option>
                            <option value="2">Inoperativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependencia" name="cbDependencia"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Departamento" class="col-3 col-form-label"><a href="~/DepartamentoUbigeo">Departamento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDepartamento" name="cbDepartamento"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DirtelRegistroServidor">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="CodigoIBP" class="col-3 col-form-label">Código IBP</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoIBPe" name="txtCodigoIBPe" placeholder="Código IBP" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Subcampo" class="col-3 col-form-label"><a href="~/ModeloBienServicioSubcampo">Subcampo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbSubcampoe" name="cbSubcampoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label"><a href="~/ModeloBienServicioDenominacion">Denominación</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDenominacione" name="cbDenominacione"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Marca" class="col-3 col-form-label"><a href="~/Marca">Marca</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMarcae" name="cbMarcae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapaMemoria" class="col-3 col-form-label">Capacidad Memoria Ram</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtCapaDiscoe" name="txtCapaDiscoe" data-placeholder="Seleccione ...">
                            <option value="1">2 GB</option>
                            <option value="2">4 GB</option>
                            <option value="3">Mas de 4 GB</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapaDisco" class="col-3 col-form-label">Capacidad Disco Duro</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCapaDiscoe" name="txtCapaDiscoe" placeholder="Capacidad Disco Duro" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AnioAdquisicion" class="col-3 col-form-label">Año de Adquisición</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtAnioAdquisicione" name="txtAnioAdquisicione" placeholder="Año de Adquisición Computadora" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="EstadoOperatividad" class="col-3 col-form-label">Estado Operatividad Servidor</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoOperatividade" name="txtEstadoOperatividade" data-placeholder="Seleccione ...">
                            <option value="1">Operativo</option>
                            <option value="2">Inoperativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependenciae" name="cbDependenciae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Departamento" class="col-3 col-form-label"><a href="~/DepartamentoUbigeo">Departamento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDepartamentoe" name="cbDepartamentoe"></select>
                    </div>
                </div>
                <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DirtelRegistroServidor">Cancelar</a>
                </div>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/BienestarMovilidadEscolar" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDirtelRegistroServidor()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>

    </div>
    <table class="table table-striped" id="tblDirtelRegistroServidor" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Código IBP</th>
                <th>Subcampo</th>
                <th>Denominación</th>
                <th>Marca</th>
                <th>Capacidad Memoria Ram</th>
                <th>Capacidad Disco Duro</th>
                <th>Año de Adquisición</th>
                <th>Estado Operatividad Servidor</th>
                <th>Dependencia</th>
                <th>Departamento</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dirtel/dirtel-registroservidor.js" asp-append-version="true"></script>
}
