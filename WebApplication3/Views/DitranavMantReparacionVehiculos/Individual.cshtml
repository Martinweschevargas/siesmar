                        <input type="number" class="form-control form-control-sm" id="txtKilometros" name="txtKilometros" placeholder="Kilometros" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label">Dependencia</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDependencia" name="txtDependencia" placeholder="Dependencia" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MotivoServicioV" class="col-3 col-form-label">Motivo Servicio</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtMotivoServicioV" name="txtMotivoServicioV" data-placeholder="Seleccione ...">
                            <option value="Mantenimiento">Mantenimiento</option>
                            <option value="Reparación">Reparación</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaSalidaV" class="col-3 col-form-label">Fecha Salida</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaSalidaV" name="txtFechaSalidaV" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="RequerimientoRepuesto" class="col-3 col-form-label">Requerimiento Repuesto</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtRequerimientoRepuesto" name="txtRequerimientoRepuesto" data-placeholder="Seleccione ...">
                            <option value="1">Si</option>
                            <option value="2">No</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CostoRepuestos" class="col-3 col-form-label">Costo Repuestos</label>
                    <div class="col-md-9">
                        <input type="decimal" class="form-control form-control-sm" id="txtCostoRepuestos" name="txtCostoRepuestos" placeholder="Costo Repuestos" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="OrdenCompraS" class="col-3 col-form-label">Orden Compra Servicio</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtOrdenCompraS" name="txtOrdenCompraS" placeholder="Orden Compra Servicio" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DitranavMantReparacionVehiculos">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
