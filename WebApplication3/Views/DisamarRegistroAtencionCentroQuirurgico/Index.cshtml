@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>
            <a href="~/DisamarRegistroAtencionCentroQuirurgico" style="text-decoration:none;">
                Registro de atención en Centro Quirúrgico
            </a>
        </h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DisamarRegistroAtencionCentroQuirurgico/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DisamarRegistroAtencionCentroQuirurgico/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select form-select-sm" data-placeholder="Seleccione ..." id="cbMess" name="cbMess"></select>
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select form-select-sm" data-placeholder="Seleccione ..." id="cbAnios" name="cbAnios"></select>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>II AA</th>
                                    <th>Zona</th>
                                    <th>Establecimiento de salud</th>
                                    <th>Dpto</th>
                                    <th>Prov</th>
                                    <th>Dist</th>
                                    <th>Sala de operación</th>
                                    <th>Nombre de médico que realiza la intervención</th>
                                    <th>NSA/CIP</th>
                                    <th>N° de col. prof</th>
                                    <th>Especialidad del medico</th>
                                    <th>Número de intervención quirurgica</th>
                                    <th>Historia clinica</th>
                                    <th>Dni</th>
                                    <th>Unidad /dependecia procedencia</th>
                                    <th>Distrito</th>
                                    <th>Grupo</th>
                                    <th>Grado o parentesco</th>
                                    <th>Situación</th>
                                    <th>Condición</th>
                                    <th>Edad</th>
                                    <th>Tipo de edad</th>
                                    <th>Sexo</th>
                                    <th>Origen del paciente intervenido</th>
                                    <th>Diagnóstico post operatorio</th>
                                    <th>Tipo de dx1</th>
                                    <th>CIE101</th>
                                    <th>Diagnóstico post operatorio2</th>
                                    <th>Tipo de dx2</th>
                                    <th>CIE102</th>
                                    <th>Diagnóstico post operatorio3</th>
                                    <th>Tipo de dx3</th>
                                    <th>CIE103</th>
                                    <th>Intervención quirurgica efectuada</th>
                                    <th>Codigo de intervención quirurgica efectuada</th>
                                    <th>Intervención quirurgica adicional</th>
                                    <th>Codigo de intervención quirurgica adicional</th>
                                    <th>Fecha /hora de incio de intervención quirurgica</th>
                                    <th>Fecha /hora fin de incio de intervención quirurgica</th>
                                    <th>Tipo de intervención quirurgica</th>
                                    <th>Estado del paciente</th>
                                    <th>Condición - destino del paciente</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>



@section Scripts{
    <script src="/js/disamar/disamar-registroatencioncentroquirurgico.js" asp-append-version="true"></script>
}