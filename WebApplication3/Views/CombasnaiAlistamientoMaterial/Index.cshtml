@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/CombasnaiAlistamientoMaterial" style="text-decoration:none;">Alistamiento de Material</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/CombasnaiAlistamientoMaterial/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/CombasnaiAlistamientoMaterial/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="row">
                        <div class="col-md-4">
                            <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                        </div>
                        <div class="col-sm-2">
                            <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Unidad</th>
                                    <th>Capacidad Operativa</th>
                                    <th>Capacidad Intrinseca I Nivel</th>
                                    <th>Ponderación Capacidad Intrínseca I Nivel</th>
                                    <th>Sub-Clasificación II Nivel</th>
                                    <th>Ponderación Capacidad Intrínseca II Nivel</th>
                                    <th>Sub-Clasificación III Nivel</th>
                                    <th>Ponderación Capacidad Intrínseca III Nivel</th>
                                    <th>Requerido</th>
                                    <th>Operativo</th>
                                    <th>Porcentaje Operatividad</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/combasnai/combasnai-alistamientomaterial.js" asp-append-version="true"></script>
}