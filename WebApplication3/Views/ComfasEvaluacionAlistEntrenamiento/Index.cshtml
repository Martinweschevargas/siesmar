@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/ComfasEvaluacionAlistEntrenamiento" style="text-decoration:none;">Evaluación del Alistamiento del Entrenamiento</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/ComfasEvaluacionAlistEntrenamiento/Individual" class="btn btn-primary">Ir Carga Individual</a>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Mostrar Datos"</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Enviar Datos a BD</button>
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nivel de Entrenamiento</th>
                                    <th>Nivel de Entrenamiento</th>
                                    <th>Capacidad Operativa</th>
                                    <th>Código de Ejercicio</th>
                                    <th>Ejercicio</th>
                                    <th>Aspectos Específicos a Evaluar</th>
                                    <th>Peso De Cada Aspecto Especifico A Evaluar</th>
                                    <th>Calificativo</th>
                                    <th>Fecha Del Periodo A Evaluar El Ejercicio</th>
                                    <th>Fecha De Realización Del Ejercicio</th>
                                    <th>Tiempo De Vigencia (Días) </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/comfas/comfas-evaluacionalistentrencomfas.js" asp-append-version="true"></script>
}