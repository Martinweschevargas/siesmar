@{
    ViewData["Title"] = "Comunicados";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>
    <a href="~/DimarComunicadoEmisionMes/Individual" style="text-decoration:none;">
        Comunicados (N.º de emisión de comunicados por mes)
    </a>
</h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaEmisionComunicado" class="col-3 col-form-label">Fecha de emisión de comunicado</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmisionComunicado" name="txtFechaEmisionComunicado" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroNotasProducidas" class="col-3 col-form-label">Número de comunicados publicados</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroNotasProducidas" name="txtNumeroNotasProducidas" placeholder="Número de comunicados publicados" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoInformacionEmitida" class="col-3 col-form-label"><a href="~/">Tema de información</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoInformacionEmitida" name="cbTipoInformacionEmitida"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PublicoObjetivo" class="col-3 col-form-label"><a href="~/">Público objetivo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPublicoObjetivo" name="cbPublicoObjetivo"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarComunicadoEmisionMes">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="FechaEmisionComunicado" class="col-3 col-form-label">Fecha de emisión de comunicado</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmisionComunicadoe" name="txtFechaEmisionComunicadoe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroNotasProducidas" class="col-3 col-form-label">Número de comunicados publicados</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroNotasProducidase" name="txtNumeroNotasProducidase" placeholder="Número de comunicados publicados" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoInformacionEmitida" class="col-3 col-form-label"><a href="~/">Tema de información</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbTipoInformacionEmitidae" name="cbTipoInformacionEmitidae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PublicoObjetivo" class="col-3 col-form-label"><a href="~/">Público objetivo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPublicoObjetivoe" name="cbPublicoObjetivoe"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarComunicadoEmisionMes/Individual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DimarComunicadoEmisionMes" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDimarComunicadoEmisionMes()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>
    </div>
    <table class="table table-striped" id="tblDimarComunicadoEmisionMes" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha de emisión de comunicado</th>
                <th>Número de comunicados publicados</th>
                <th>Tema de información</th>
                <th>Público objetivo</th>
                <th>Codigo Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dimar/dimar-comunicadoemisionmes.js" asp-append-version="true"></script>
}
