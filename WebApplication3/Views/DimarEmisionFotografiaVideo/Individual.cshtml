@{
    ViewData["Title"] = "Emisión de fotografías y videos institucionales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <a href="~/DimarEmisionFotografiaVideo/Individual" style="text-decoration:none;">
        Emisión de fotografías y videos institucionales
    </a>
</h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaEmisionFotoVideo" class="col-3 col-form-label">Fecha de emisión</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmisionFotoVideo" name="txtFechaEmisionFotoVideo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoCosto" class="col-3 col-form-label">Tipo de Costo</label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="txtTipoCosto" name="txtTipoCosto">
                            <option value="1">RDR, Recursos Directamente Recaudados</option>
                            <option value="2">SC, Sin costo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ProductoDimar" class="col-3 col-form-label"><a href="~/ProductoDimar">Tipo de Producto</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbProductoDimar" name="cbProductoDimar"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Cantidad" class="col-3 col-form-label">Cantidad</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtCantidad" name="txtCantidad" placeholder="Cantidad" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoRecaudado" class="col-3 col-form-label">Monto recaudado</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMontoRecaudado" name="txtMontoRecaudado" placeholder="Monto recaudado" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarEmisionFotografiaVideo">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="FechaEmisionFotoVideo" class="col-3 col-form-label">Fecha de emisión</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEmisionFotoVideoe" name="txtFechaEmisionFotoVideoe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoCosto" class="col-3 col-form-label">Tipo de Costo</label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="txtTipoCostoe" name="txtTipoCostoe">
                            <option value="1">RDR, Recursos Directamente Recaudados</option>
                            <option value="2">SC, Sin costo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ProductoDimar" class="col-3 col-form-label"><a href="~/ProductoDimar">Tipo de Producto</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbProductoDimare" name="cbProductoDimare"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Cantidad" class="col-3 col-form-label">Cantidad</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtCantidade" name="txtCantidade" placeholder="Cantidad" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoRecaudado" class="col-3 col-form-label">Monto recaudado</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMontoRecaudadoe" name="txtMontoRecaudadoe" placeholder="Monto recaudado" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarEmisionFotografiaVideo/Individual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DimarEmisionFotografiaVideo" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDimarEmisionFotografiaVideo()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>
    </div>
    <table class="table table-striped" id="tblDimarEmisionFotografiaVideo" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha de emisión</th>
                <th>Tipo de Costo</th>
                <th>Tipo de Producto</th>
                <th>Cantidad</th>
                <th>Monto recaudado</th>
                <th>Codigo Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dimar/dimar-emisionfotografiavideo.js" asp-append-version="true"></script>
}
