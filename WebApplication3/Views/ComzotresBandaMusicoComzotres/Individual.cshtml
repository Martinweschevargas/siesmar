    <table class="table table-striped" id="tblComzotresBandaMusicoComzotres" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Tipo de Comision</th>
                <th>Evento</th>
                <th>Grupo Comisionado</th>
                <th>Vestimenta</th>
                <th>Nombre del Evento</th>
                <th>Lugar</th>
