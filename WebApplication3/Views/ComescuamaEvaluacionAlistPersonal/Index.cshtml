@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/ComescuamaEvaluacionAlistPersonal" style="text-decoration:none;">Evaluación del Alistamiento de Personal</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/ComescuamaEvaluacionAlistPersonal/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/ComescuamaEvaluacionAlistPersonal/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body" >
                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Vista Previa</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Guardar Formato</button>
                    </div>
                    <div class="col-sm-4">
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Unidad</th>
                                    <th>Fecha</th>
                                    <th>DNI</th>
                                    <th>CIP</th>
                                    <th>Cargo</th>
                                    <th>Grado-Esperado</th>
                                    <th>Especialidad-Esperado</th>
                                    <th>Grado-Actual</th>
                                    <th>Especialidad-Actual</th>
                                    <th>Grado Jerárquico</th>
                                    <th>Servicio o Experiencia</th>
                                    <th>Especialización Profesional Técnica</th>
                                    <th>Cursos Profesionales Requeridos</th>
                                    <th>Puntaje Total Personal Evaluado</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<div class="modal fade" id="ventanaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body" style="padding-left:10px">
                <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
                    <div class="card" style="width: 100%;">
                        <div class="card-header nuevo">
                            <h4>Reportes - COMESCUAMA</h4>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" onclick="optReporte(1)">
                            <label class="form-check-label" for="flexRadioDefault1">
                                EVALUACION DEL ALISTAMIENTO DEL PERSONAL
                            </label>
                        </div>
                        <div class="form-group row col-md-6">
                            <label for="carga" class="col-3 col-form-label">Carga</label>
                            <div class="form-group row col-md-6">
                                <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;margin-bottom:10px">
                            <div class="col-md-6 text-center">
                                <button type='button' id="btnReportView" class="btn btn-primary align-self-end">Ver</button>
                            </div>
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-danger align-self-end" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal1-footer">
            <button type="button" class="btn" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/comescuama/comescuama-evaluacionalistpersonal.js" asp-append-version="true"></script>
}