@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h3><a href="~/DirespromPrograma2daEspecializacionS" style="text-decoration:none;">Programas de Segunda Especialización del Personal Superior de la Marina</a></h3>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DirespromPrograma2daEspecializacionS/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DirespromPrograma2daEspecializacionS/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-2">
                            <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>DNI</th>
                                    <th>Edad</th>
                                    <th>Sexo</th>
                                    <th>Condición</th>
                                    <th>Institución a la que Pertenece</th>
                                    <th>Grado</th>
                                    <th>Especialidad</th>
                                    <th>Procedencia</th>
                                    <th>Año de Promoción</th>
                                    <th>Dependencia</th>
                                    <th>Zona Naval</th>
                                    <th>Programa</th>
                                    <th>Programa Específico</th>
                                    <th>FechaInicio</th>
                                    <th>FechaTermino</th>
                                    <th>FechaRegistro</th>
                                    <th>Modalidad</th>
                                    <th>Concluyó Programa de Estudios</th>
                                    <th>Motivos de no Concluir</th>
                                    <th>Calificación Final Obtenida </th>
                                    <th>Certificación /título Obtenido</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ventanaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body" style="padding-left:10px">
                <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
                    <div class="card" style="width: 100%;">
                        <div class="card-header nuevo">
                            <h4>Reportes - DIRESPROM</h4>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" onclick="optReporte(1)">
                            <label class="form-check-label" for="flexRadioDefault1">
                                PROGRAMAS DE SEGUNDA ESPECIALIZACION DEL PERSONAL SUPERIOR DE LA MARINA
                            </label>
                        </div>
                        <div class="row">
                            <div class="form-group row col-md-6">
                                <label for="fechainicio" class="col-6 col-form-label">Fecha Inicio</label>
                                <div class="col-md-6">
                                    <input type="date" class="form-control form-control-sm" id="fechainicio" name="fechainicio" required>
                                </div>
                            </div>
                            <div class="form-group row col-md-6">
                                <label for="fechafin" class="col-6 col-form-label">Fecha Fin</label>
                                <div class="col-md-6">
                                    <input type="date" class="form-control form-control-sm" id="fechafin" name="fechafin" required>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;margin-bottom:10px">
                            <div class="col-md-6 text-center">
                                <button type='button' id="btnReportView" class="btn btn-primary align-self-end">Ver</button>
                            </div>
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-danger align-self-end" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal1-footer">
            <button type="button" class="btn" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/diresprom/diresprom-programa2daespecializacions.js" asp-append-version="true"></script>
}