@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/DirintemarPubliInteresInsti" style="text-decoration:none;">Publicación Interés Institucional</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DirintemarPubliInteresInsti/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DirintemarPubliInteresInsti/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Vista Previa</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Guardar Formato</button>
                    </div>
                    <div class="col-sm-4">
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Código</th>
                                    <th>TipoPublicacion</th>
                                    <th>Denominación TemaPublicación</th>
                                    <th>Nro Publicación</th>
                                    <th>Fecha Publicación</th>
                                    <th>Número Ejemplares Publicados</th>
                                    <th>Númnero Suscriptores</th>
                                    <th>Promotor Publicaciones</th>
                                    <th>Responsable</th>
                                    <th>Inversión</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
