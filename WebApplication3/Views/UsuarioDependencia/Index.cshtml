@{
    ViewData["Title"] = "Usuarios - Dependencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="/UsuarioDependencia" style="text-decoration:none;">Usuario - Dependencias</a></h1>

<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtDescripcion" class="col-3 col-form-label">Usuario</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbUsuario" name="cbUsuario" data-placeholder="Usuario ..."></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCod" class="col-3 col-form-label">Dependencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbDependencia" name="cbDependencia" data-placeholder="Dependencia ..."></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="/UsuarioDependencia">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>

<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" name="txtCodigo"/>
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtDescripcion" class="col-3 col-form-label">Usuario</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbUsuarioe" name="cbUsuarioe" data-placeholder="Usuario ..."></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCod" class="col-3 col-form-label">Dependencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbDependenciae" name="cbDependenciae" data-placeholder="Dependencia ..."></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="/UsuarioDependencia">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>

<div id="listar">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevoUsuariosDependencias()" />
    <table class="table table-striped" id="tblUsuarioDependencias" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Nombre Usuario</th>
                <th>Nombre Dependencia</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/seguridad/usuariodependencias.js" asp-append-version="true"></script>
}
