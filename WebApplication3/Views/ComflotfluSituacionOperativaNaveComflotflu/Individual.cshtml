                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCascoUnidadNaval" name="cbCascoUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoPlataforma" class="col-3 col-form-label">Tipo de plataforma</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtTipoPlataforma" name="txtTipoPlataforma" placeholder="Tipo de plataforma" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia</a></label>
