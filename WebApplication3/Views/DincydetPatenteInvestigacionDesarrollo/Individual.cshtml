@{
    ViewData["Title"] = "Archivo Patentes Solicitadas y Otorgados por Indecopi en Investigación y Desarrollo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DincydetPatenteInvestigacionDesarrollo/Individual" style="text-decoration:none;">Archivo Patentes Solicitadas y Otorgados por Indecopi en Investigación y Desarrollo </a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label">Denominación</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDenominacion" name="txtDenominacion" placeholder="Denominación" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="EstadoPatente" class="col-3 col-form-label">Estado Patente</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoPatente" name="txtEstadoPatente" data-placeholder="Seleccione ...">
                            <option value="SOLICITADO">SOLICITADO</option>
                            <option value="OTORGADO">OTORGADO</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AreasCT" class="col-3 col-form-label"><a href="~/AreaCT" style="text-decoration:none;">Áreas CT </a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbAreasCT" name="cbAreasCT"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DincydetPatenteInvestigacionDesarrollo">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Denominacion" class="col-3 col-form-label">Denominación</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDenominacione" name="txtDenominacione" placeholder="Denominación" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="EstadoPatente" class="col-3 col-form-label">Estado Patente</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtEstadoPatentee" name="txtEstadoPatentee" data-placeholder="Seleccione ...">
                            <option value="SOLICITADO">SOLICITADO</option>
                            <option value="OTORGADO">OTORGADO</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AreasCT" class="col-3 col-form-label"><a href="~/AreaCT" style="text-decoration:none;">Áreas CT </a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbAreasCTe" name="cbAreasCTe"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DincydetPatenteInvestigacionDesarrollo">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar">
    <p><a href="~/DincydetPatenteInvestigacionDesarrollo" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDincydetPatenteInvestigacionDesarrollo()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <hr/>
    <table class="table table-striped" id="tblDincydetPatenteInvestigacionDesarrollo" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Denominación</th>
                <th>Estado Patente</th>
                <th>Areas CT </th>
                <th>Código Carga </th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts{
    <script src="/js/dincydet/dincydet-patenteinvestigdesarrollo.js" asp-append-version="true"></script>
}
