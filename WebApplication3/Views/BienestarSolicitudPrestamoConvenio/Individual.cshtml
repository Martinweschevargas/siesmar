                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaSolicitudCe" name="txtFechaSolicitudCe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIBeneficiario" class="col-3 col-form-label">DNI</label>
