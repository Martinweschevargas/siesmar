    <table class="table table-striped" id="tblActClimaLaboralEspecificas" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Act Clima Laboral Específica</th>
                <th>Act Clima Laboral General</th>
                <th>Código Actividad Clima Laboral</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
