@{
    ViewData["Title"] = "ActClimaLaboralEspecifica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ActClimaLaboralEspecifica" style="text-decoration:none;">Act Clima Laboral Específica</a></h1>

<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
