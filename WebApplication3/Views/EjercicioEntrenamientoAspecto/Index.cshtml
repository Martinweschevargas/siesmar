@{
    ViewData["Title"] = "EjerciciosEntrenamientosAspectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/EjercicioEntrenamientoAspecto" style="text-decoration:none;">Ejercicios Entrenamientos Aspectos</a></h1>

<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtCodEjer" class="col-3 col-form-label">Codigo Ejercicio </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodEjer" name="txtCodEjer" placeholder="Código" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtAspecto" class="col-3 col-form-label">Aspecto Evaluación</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtAspecto" name="txtAspecto" placeholder="Descripción" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtPeso" class="col-3 col-form-label">Peso</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPeso" name="txtPeso" placeholder="Peso" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtFK" class="col-3 col-form-label">Ejercicio Entrenamiento</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbFK" name="cbFK"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/EjercicioEntrenamientoAspecto">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

</div>

<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtCodEjer" class="col-3 col-form-label">Codigo Ejercicio </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodEjere" name="txtCodEjere" placeholder="Código" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtAspecto" class="col-3 col-form-label">Aspecto Evaluación</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtAspectoe" name="txtAspectoe" placeholder="Descripción" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtPeso" class="col-3 col-form-label">Peso</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPesoe" name="txtPesoe" placeholder="Código" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtFK" class="col-3 col-form-label">Ejercicio Entrenamiento</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbFKe" name="cbFKe"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/EjercicioEntrenamientoAspecto">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

</div>


<div id="listar">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaEjercicioEntrenamientoAspecto()" />
    <table class="table table-striped" id="tblEjercicioEntrenamientoAspectos" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Aspecto Evaluación</th>
                <th>Peso</th>
                <th>Código Ejercicio</th>
                <th>Ejercicio Entrenamiento</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/ejercicioentrenamientoaspecto.js" asp-append-version="true"></script>
}