@{
    ViewData["Title"] = "Alistamiento de repuestos críticos (ARC)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <a href="~/ComfuavinavAlistamientoRepuestoCritico/Individual" style="text-decoration:none;">
        Alistamiento de repuestos críticos (ARC)
    </a>
</h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNaval" name="cbUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="cbAlistamientoRepuestoCritico" class="col-3 col-form-label"><a href="~/AlistamientoRepuestoCritico">Alistamiento Repuesto Crítico</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistamientoRepuestoCritico" name="cbAlistamientoRepuestoCritico"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtSistemaRepuesto" class="col-3 col-form-label">Sistema</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm" id="txtSistemaRepuesto" name="txtSistemaRepuesto" placeholder="Sistema" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtSubsistemaRepuesto" class="col-3 col-form-label">Subsistema</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSubsistemaRepuesto" name="txtSubsistemaRepuesto" placeholder="Subsistema" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtEquipo" class="col-3 col-form-label">Equipo</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtEquipo" name="txtEquipo" placeholder="Equipo" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtRepuesto" class="col-3 col-form-label">
                        Alistamiento de repuestos(descripción) listados de logística inicial requerida (LIR) por unidad tipo
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtRepuesto" name="txtRepuesto" placeholder="Repuesto" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtExistente" class="col-3 col-form-label">
                        N° de repuestos existentes 
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtExistente" name="txtExistente" placeholder="Existentes" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtNecesario" class="col-3 col-form-label">
                        N° de repuestos necesarios
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNecesario" name="txtNecesario" placeholder="Necesarios" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCoeficientePonderacion" class="col-3 col-form-label">
                        Coeficiente de podendaración para repuestos según la unidad y sistema
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCoeficientePonderacion" name="txtCoeficientePonderacion" placeholder="Coeficiente ponderación" disabled>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfuavinavAlistamientoRepuestoCritico">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">UNIDAD</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNavale" name="cbUnidadNavale"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="cbAlistamientoRepuestoCritico" class="col-3 col-form-label"><a href="~/AlistamientoRepuestoCritico">Alistamiento Repuesto Crítico</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistamientoRepuestoCriticoe" name="cbAlistamientoRepuestoCriticoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtSistemaRepuesto" class="col-3 col-form-label">Sistema</label>
                    <div class="col-md-9">
                        <input class="form-control form-control-sm" id="txtSistemaRepuestoe" name="txtSistemaRepuestoe" placeholder="Sistema" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtSubsistemaRepuesto" class="col-3 col-form-label">Subsistema</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSubsistemaRepuestoe" name="txtSubsistemaRepuestoe" placeholder="ARTICULO" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtEquipo" class="col-3 col-form-label">Equipo</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtEquipoee" name="txtEquipoee" placeholder="Equipo" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtRepuesto" class="col-3 col-form-label">
                        Alistamiento de repuestos(descripción) listados de logística inicial requerida (LIR) por unidad tipo
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtRepuestoe" name="txtRepuestoe" placeholder="Combustible lubricante" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtExistente" class="col-3 col-form-label">
                        N° de repuestos existentes
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtExistentee" name="txtExistentee" placeholder="Existentes" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtNecesario" class="col-3 col-form-label">
                        N° de repuestos necesarios
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNecesarioe" name="txtNecesarioe" placeholder="Necesarios" disabled>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCoeficientePonderacion" class="col-3 col-form-label">
                        Coeficiente de podendaración para repuestos según la unidad y sistema
                    </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCoeficientePonderacione" name="txtCoeficientePonderacione" placeholder="Coeficiente ponderación" disabled>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfuavinavAlistamientoRepuestoCritico/Individual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaComfuavinavAlistamientoRepuestoCritico()" />
    <div class="dropdown">
        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Modos de Carga :
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="~/ComfuavinavAlistamientoRepuestoCritico">Masiva</a>
            <a class="dropdown-item" href="~/ComfuavinavAlistamientoRepuestoCritico/Individual">Individual</a>
        </div>
    </div>
    <table class="table table-striped" id="tblComfuavinavAlistamientoRepuestoCritico" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Unidad</th>
                <th>Sistema</th>
                <th>Subsistema</th>
                <th>Equipo</th>
                <th>Alistamiento de repuestos(descripción) listados de logística inicial requerida (LIR)</th>
                <th>N° de repuestos existentes</th>
                <th>N° de repuestos necesarios</th>
                <th>Coeficiente de podendaración para repuestos según la unidad y sistema</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/comfuavinav/comfuavinav-alistamientorepuestocritico.js" asp-append-version="true"></script>
}
