@{
    ViewData["Title"] = "Hospedaje Adulto Mayor Señor del Mar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/BienestarHospedajeAdultoMayor/Individual" style="text-decoration:none;">Hospedaje Adulto Mayor Señor del Mar</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="PersonalSolicitante" class="col-3 col-form-label"><a href="~/PersonalSolicitante">Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalSolicitante" name="cbPersonalSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIHospedado" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNIHospedado" name="txtDNIHospedado" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionSolicitante" class="col-3 col-form-label"><a href="~/CondicionSolicitante">Condición del Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionSolicitante" name="cbCondicionSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalBeneficiado" class="col-3 col-form-label"><a href="~/PersonalBeneficiado">Beneficiario</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiado" name="cbPersonalBeneficiado"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CategoriaPago" class="col-3 col-form-label">Condición del Hospedado</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtCategoriaPago" name="txtCategoriaPago" data-placeholder="Seleccione ...">
                            <option value="Si Autovalente">Si Autovalente</option>
                            <option value="No Autovalente">No Autovalente</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoPermanencia" class="col-3 col-form-label">Tipo Permanencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtTipoPermanencia" name="txtTipoPermanencia" data-placeholder="Seleccione ...">
                            <option value="Temporal / transitoria">Temporal / transitoria</option>
                            <option value="Permanente">Permanente</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ResultadoSolicitud" class="col-3 col-form-label">Resultado Solicitud</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtResultadoSolicitud" name="txtResultadoSolicitud" data-placeholder="Seleccione ...">
                            <option value="Obtuvo vacante">Obtuvo vacante</option>
                            <option value="No obtuvo vacante">No obtuvo vacante</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaIngreso" class="col-3 col-form-label">Fecha de Ingreso del que Obtuvo Vacante</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaIngreso" name="txtFechaIngreso" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarHospedajeAdultoMayor">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="PersonalSolicitante" class="col-3 col-form-label"><a href="~/PersonalSolicitante">Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalSolicitantee" name="cbPersonalSolicitantee"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIHospedado" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNIHospedadoe" name="txtDNIHospedadoe" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionSolicitante" class="col-3 col-form-label"><a href="~/CondicionSolicitante">Condición del Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionSolicitantee" name="cbCondicionSolicitantee"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalBeneficiado" class="col-3 col-form-label"><a href="~/PersonalBeneficiado">Beneficiario</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiadoe" name="cbPersonalBeneficiadoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CategoriaPago" class="col-3 col-form-label">Condición del Hospedado</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtCategoriaPagoe" name="txtCategoriaPagoe" data-placeholder="Seleccione ...">
                            <option value="Si Autovalente">Si Autovalente</option>
                            <option value="No Autovalente">No Autovalente</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoPermanencia" class="col-3 col-form-label">Tipo Permanencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtTipoPermanenciae" name="txtTipoPermanenciae" data-placeholder="Seleccione ...">
                            <option value="Temporal / transitoria">Temporal / transitoria</option>
                            <option value="Permanente">Permanente</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ResultadoSolicitud" class="col-3 col-form-label">Resultado Solicitud</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtResultadoSolicitude" name="txtResultadoSolicitude" data-placeholder="Seleccione ...">
                            <option value="Obtuvo vacante">Obtuvo vacante</option>
                            <option value="No obtuvo vacante">No obtuvo vacante</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaIngreso" class="col-3 col-form-label">Fecha de Ingreso del que Obtuvo Vacante</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaIngresoe" name="txtFechaIngresoe" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarHospedajeAdultoMayor">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/BienestarHospedajeAdultoMayor" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaBienestarHospedajeAdultoMayor()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>

    </div>
    <table class="table table-striped" id="tblBienestarHospedajeAdultoMayor" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Solicitante</th>
                <th>DNI</th>
                <th>Condición del Solicitante</th>
                <th>Beneficiario</th>
                <th>Condición del Hospedado</th>
                <th>Tipo Permanencia</th>
                <th>Resultado Solicitud</th>
                <th>Fecha de Ingreso del que Obtuvo Vacante</th>
                <th>CodigoCarga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/bienestar/bienestar-hospedajeadultomayor.js" asp-append-version="true"></script>
}
