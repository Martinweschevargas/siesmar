@{
    ViewData["Title"] = "EstudiantesPreCiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/DircitenEstudiantesPreCiten/Individual" style="text-decoration:none;">Estudiantes del Pre Citen</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="DNI" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNI" name="txtDNI" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Genero" class="col-3 col-form-label">Género</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtGenero" name="txtGenero" data-placeholder="Seleccione ...">
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaNacimiento" class="col-3 col-form-label">Fecha Nacimiento </label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaNacimiento" name="txtFechaNacimiento"  required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LugarDomicilio" class="col-3 col-form-label"><a href="~/DistritoUbigeo" style="text-decoration:none;">Lugar Domicilio</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbLugarDomicilio" name="cbLugarDomicilio"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoColegioProcedencia" class="col-3 col-form-label">Tipo Colegio Procedencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtTipoColegioProcedencia" name="txtTipoColegioProcedencia" data-placeholder="Seleccione ...">
                            <option value="1">Pública</option>
                            <option value="2">Privada</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ColegioProcedencia" class="col-3 col-form-label">Colegio Procedencia</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtColegioProcedencia" name="txtColegioProcedencia" placeholder="Colegio Procedencia" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LugarColegio" class="col-3 col-form-label"><a href="~/DistritoUbigeo" style="text-decoration:none;">Lugar Colegio</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbLugarColegio" name="cbLugarColegio"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DircitenEstudiantesPreCiten">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="DNI" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNIe" name="txtDNIe" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Genero" class="col-3 col-form-label">Género</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtGeneroe" name="txtGeneroe" data-placeholder="Seleccione ...">
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaNacimiento" class="col-3 col-form-label">Fecha Nacimiento </label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaNacimientoe" name="txtFechaNacimientoe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LugarDomicilio" class="col-3 col-form-label">Lugar Domicilio </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtLugarDomicilioe" name="txtLugarDomicilioe" placeholder="Lugar Domicilio" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoColegioProcedencia" class="col-3 col-form-label">Tipo Colegio Procedencia</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtTipoColegioProcedenciae" name="txtTipoColegioProcedenciae" data-placeholder="Seleccione ...">
                            <option value="1">Pública</option>
                            <option value="2">Privada</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ColegioProcedencia" class="col-3 col-form-label">Colegio Procedencia</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtColegioProcedenciae" name="txtColegioProcedenciae" placeholder="Colegio Procedencia" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LugarColegio" class="col-3 col-form-label">Lugar Colegio </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtLugarColegioe" name="txtLugarColegioe" placeholder="Lugar Colegio" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DircitenEstudiantesPreCiten">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DircitenEstudiantesPreCiten" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDircitenEstudiantesPreCiten()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <hr />
    <table class="table table-striped" id="tblDircitenEstudiantesPreCiten" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>DNI</th>
                <th>Género</th>
                <th>Fecha Nacimiento</th>
                <th>Lugar Domicilio</th>
                <th>Tipo Colegio Procedencia</th>
                <th>Colegio Procedencia</th>
                <th>Lugar Colegio</th>
                <th>Código Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts{

    <script src="/js/dirciten/dirciten-estuantepreciten.js" asp-append-version="true"></script>

}
