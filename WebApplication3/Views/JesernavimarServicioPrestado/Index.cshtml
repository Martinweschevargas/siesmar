@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>
            <a href="~/JesernavimarServicioPrestado" style="text-decoration:none;">
                Servicios prestados
            </a>
        </h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/JesernavimarServicioPrestado/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/JesernavimarServicioPrestado/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>

                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select form-select-sm" data-placeholder="Seleccione ..." id="cbMes" name="cbMes"></select>
                        </div>
                        <div class="col-sm-4">
                            <select class="form-select form-select-sm" data-placeholder="Seleccione ..." id="cbAnio" name="cbAnio"></select>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Unidad que presta servicio</th>
                                    <th>Documento</th>
                                    <th>Fecha</th>
                                    <th>Unidad Auxiliar</th>
                                    <th>N° viaje comercial</th>
                                    <th>Puerto de zarpe</th>
                                    <th>Departamento</th>
                                    <th>Provincia</th>
                                    <th>Distrito</th>
                                    <th>Fecha y hora de zarpe</th>
                                    <th>Ocurrencia</th>
                                    <th>Puerto de arribo</th>
                                    <th>Departamento</th>
                                    <th>Provincia</th>
                                    <th>Distrito</th>
                                    <th>Fecha y hora de arribo</th>
                                    <th>Empresa a la cual se brinda el servicio</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/jesernavimar/jesernavimar-servicioprestado.js" asp-append-version="true"></script>
}