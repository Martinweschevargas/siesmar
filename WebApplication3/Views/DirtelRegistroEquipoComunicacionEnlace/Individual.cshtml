                            <option value="1">Operativo</option>
                            <option value="2">Inoperativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Adquisicion" class="col-3 col-form-label">Año de Adquisicion</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtAdquisicione" name="txtAdquisicione" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Dependencia" class="col-3 col-form-label"><a href="~/Dependencia">Dependencia</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDependenciae" name="cbDependenciae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Departamento" class="col-3 col-form-label"><a href="~/Departamento">Departamento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDepartamentoe" name="cbDepartamentoe"></select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-primary">Grabar</button>
                    </div>
                    <div class="col-md-6 text-center">
                        <a class="btn btn-danger" href="~/DirtelRegistroEquipoComunicacionEnlace">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/BienestarMovilidadEscolar" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDirtelRegistroEquipoComunicacionEnlace()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>

    </div>
    <table class="table table-striped" id="tblDirtelRegistroEquipoComunicacionEnlace" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Codigo BP</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Modo</th>
                <th>Numero Canales</th>
                <th>Ancho de Banda (KBPS)</th>
                <th>Tipo de Equipo Comunicacion Enlace</th>
                <th>Estado de Operatividad</th>
                <th>Año de Adquisicion</th>
                <th>Dependencia</th>
                <th>Departamento</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/dirtel/dirtel-registroequipocomunicacionenlace.js" asp-append-version="true"></script>
}
