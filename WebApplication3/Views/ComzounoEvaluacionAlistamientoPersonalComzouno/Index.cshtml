@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>
            <a href="~/ComzounoEvaluacionAlistamientoPersonalComzouno" style="text-decoration:none;">
                Evaluación del alistamiento de personal
            </a>
        </h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/ComzounoEvaluacionAlistamientoPersonalComzouno/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/ComzounoEvaluacionAlistamientoPersonalComzouno/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-2">
                            <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Unidad</th>
                                    <th>Fecha</th>
                                    <th>DNI</th>
                                    <th>CIP</th>
                                    <th>Cargo</th>
                                    <th>Grado Esperado</th>
                                    <th>Especialidad Esperado</th>
                                    <th>Grado Actual</th>
                                    <th>Especialidad Actual</th>
                                    <th>Grado Jerárquico</th>
                                    <th>Servicio o experiencia</th>
                                    <th>Especialización profesional o técnica complementaria</th>
                                    <th>Cursos profesionales requeridos</th>
                                    <th>Puntuaje total por individuo</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/comzouno/comzouno-evaluacionalistamientopersonalcomzouno.js" asp-append-version="true"></script>
}