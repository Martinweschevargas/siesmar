                        <input type="date" class="form-control form-control-sm" id="txtFechaUsuarioe" name="txtFechaUsuarioe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoRecaudado" class="col-3 col-form-label">Monto recaudado</label>
                    <div class="col-md-9">
