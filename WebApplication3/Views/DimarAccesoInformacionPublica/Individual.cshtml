                </div>
                <div class="form-group row col-md-6">
                    <label for="TiempoRespuestaDias" class="col-3 col-form-label">Tiempo de respuesta/ dias</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTiempoRespuestaDiase" name="txtTiempoRespuestaDiase" placeholder="Tiempo de respuesta/ dias" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarAccesoInformacionPublica/Individual">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/DimarAccesoInformacionPublica" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDimarAccesoInformacionPublica()" />
    <div class="row align-items-start">
        <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
        <div class="col">
            <input type='button' id="btn_search" value="Buscar" class="btn btn-primary">
            <input type='button' id="btn_all" value="Mostrar Todos" class="btn btn-primary">
        </div>
    </div>
    <table class="table table-striped" id="tblDimarAccesoInformacionPublica" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha de recepción</th>
                <th>Documento</th>
                <th>Fecha del documento</th>
                <th>Administrado</th>
                <th>Asunto</th>
                <th>Documento de respuesta</th>
                <th>Fecha de entrega al usuario</th>
                <th>Monto recaudado</th>
