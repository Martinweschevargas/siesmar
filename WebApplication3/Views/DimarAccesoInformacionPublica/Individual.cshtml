@{
    ViewData["Title"] = "Pedido de Acceso a la información Pública ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DimarAccesoInformacionPublica/Individual" style="text-decoration:none;"> Pedido de Acceso a la información Pública</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaRecepcion" class="col-3 col-form-label">Fecha de recepción</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaRecepcion" name="txtFechaRecepcion" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroDocumento" class="col-3 col-form-label">Documento</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNumeroDocumento" name="txtNumeroDocumento" placeholder="Documento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaDocumento" class="col-3 col-form-label">Fecha del documento</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaDocumento" name="txtFechaDocumento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Administrado" class="col-3 col-form-label">Administrado</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtAdministrado" name="txtAdministrado" placeholder="Administrado" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Asunto" class="col-3 col-form-label">Asunto</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtAsunto" name="txtAsunto" placeholder="Asunto" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DocumentoRespuesta" class="col-3 col-form-label">Documento de respuesta</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDocumentoRespuesta" name="txtDocumentoRespuesta" placeholder="Documento de respuesta" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaUsuario" class="col-3 col-form-label">Fecha de entrega al usuario</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaUsuario" name="txtFechaUsuario" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoRecaudado" class="col-3 col-form-label">Monto recaudado</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMontoRecaudado" name="txtMontoRecaudado" placeholder="Monto recaudado" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TiempoRespuestaDias" class="col-3 col-form-label">Tiempo de respuesta/ dias</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTiempoRespuestaDias" name="txtTiempoRespuestaDias" placeholder="Tiempo de respuesta/ dias" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DimarAccesoInformacionPublica">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
