@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/DiabasteDistribucionVestuario" style="text-decoration:none;">Distribución de Material a las Unidades y Dependencias</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DiabasteDistribucionVestuario/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DiabasteDistribucionVestuario/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">
                <div class="card-body">
                    <div class="row">
                        <div class="row">
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm" type="file" id="inputExcel" />
                            </div>
                            <div class="col-sm-2">
                                <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-6 text-center">
                                <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                            </div>
                            <div class="col-sm-6 text-center">
                                <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                            </div>
                        </div>
                    </div>
                    <hr />
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Año</th>
                                    <th>Mes</th>
                                    <th>Area Usuaria</th>
                                    <th>Tipo de Material</th>
                                    <th>Unidad de Medida</th>
                                    <th>Cantidad de Material Entregado</th>
                                    <th>Fecha de Entrega</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="ventanaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body" style="padding-left:10px">
                <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
                    <div class="card" style="width: 100%;">
                        <div class="card-header nuevo">
                            <h4>Reportes - DIABASTE</h4>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" onclick="optReporte(1)">
                            <label class="form-check-label" for="flexRadioDefault1">
                                DISTRIBUCIÓN DE VESTUARIO A LAS UNIDADES Y DEPENDENCIAS
                            </label>
                        </div>
                        <div class="form-group row col-md-6">
                            <label for="carga" class="col-3 col-form-label">Carga</label>
                            <div class="form-group row col-md-6">
                                <div class="col"><select class="form-select form-control-sm" id="cargas" name="cargas"></select></div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;margin-bottom:10px">
                            <div class="col-md-6 text-center">
                                <button type='button' id="btnReportView" class="btn btn-primary align-self-end">Ver</button>
                            </div>
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-danger align-self-end" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal1-footer">
            <button type="button" class="btn" data-bs-dismiss="modal">Cerrar</button>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/js/diabaste/diabaste-distribucionvestuario.js" asp-append-version="true"></script>
}