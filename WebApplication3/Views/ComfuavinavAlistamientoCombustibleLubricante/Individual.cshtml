@{
    ViewData["Title"] = "Alistamiento de combustibles y lubricantes (ACL)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/ComfuavinavAlistamientoCombustibleLubricante/Individual" style="text-decoration:none;">Certificados o Licencias de Posesión y uso de Armas Menores Otorgadas</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval" style="text-decoration:none;">Unidad Naval</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbUnidadNaval" name="cbUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistamientoCombustibleLubricante" class="col-3 col-form-label"><a href="~/AlistamientoCombustibleLubricante" style="text-decoration:none;">Alistamiento Combustible Lubricante</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbAlistamientoCombustibleLubricante" name="cbAlistamientoCombustibleLubricante"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfuavinavAlistamientoCombustibleLubricante">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval" style="text-decoration:none;">Unidad Naval</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbUnidadNavale" name="cbUnidadNavale"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistamientoCombustibleLubricante" class="col-3 col-form-label"><a href="~/AlistamientoCombustibleLubricante" style="text-decoration:none;">Alistamiento Combustible Lubricante</a></label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbAlistamientoCombustibleLubricantee" name="cbAlistamientoCombustibleLubricantee"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfuavinavAlistamientoCombustibleLubricante">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/ComfuavinavAlistamientoCombustibleLubricante" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaComfuavinavAlistamientoCombustibleLubricante()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <table class="table table-striped" id="tblComfuavinavAlistamientoCombustibleLubricante" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Unidad Naval</th>
                <th>Alistamiento de lubricantes y combustibles</th>
                <th>Código Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/comfuavinav/comfuavinav-alistamientocombustiblelubricante.js" asp-append-version="true"></script>
}
