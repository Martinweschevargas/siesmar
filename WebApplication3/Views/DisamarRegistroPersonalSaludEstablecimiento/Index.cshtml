@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1>
            <a href="~/DisamarRegistroPersonalSaludEstablecimiento" style="text-decoration:none;">
                Registro del Personal de la Salud de los Establecimientos de Salud
            </a>
        </h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DisamarRegistroPersonalSaludEstablecimiento/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DisamarRegistroPersonalSaludEstablecimiento/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="row">
                        <div class="col-sm-4">
                            <input class="form-control form-control-sm" type="file" id="inputExcel" />
                        </div>
                        <div class="col-sm-2">
                            <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-warning" onclick="mostrarDatos()">Previsualizar Datos</button>
                        </div>
                        <div class="col-sm-6 text-center">
                            <button class="btn btn-success" onclick="enviarDatos()">Grabar Formato</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Apellidos Y Nombres</th>
                                    <th>CIP</th>
                                    <th>DNI</th>
                                    <th>Tipo Personal</th>
                                    <th>Grado</th>
                                    <th>Nombre de colegio profesional</th>
                                    <th>Número de colegiatura</th>
                                    <th>Especialidad</th>
                                    <th>Código de establecimiento</th>
                                    <th>Condición laboral</th>
                                    <th>Tipo de labor a realizar</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/disamar/disamar-registropersonalsaludestablecimiento.js" asp-append-version="true"></script>
}