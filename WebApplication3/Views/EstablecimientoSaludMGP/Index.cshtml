@{
    ViewData["Title"] = "EstablecimientosSaludMGP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/EstablecimientoSaludMGP" style="text-decoration:none;">Establecimientos Salud MGP</a></h1>

<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtCodigoEstablecimiento" class="col-3 col-form-label">Código Establecimiento RENAES</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoEstablecimiento" name="txtCodigoEstablecimiento" placeholder="Código Establecimiento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCodigoRenaes" class="col-3 col-form-label">Código Renaes Mindef</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoRenaes" name="txtCodigoRenaes" placeholder="Código Renaes" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtFK" class="col-3 col-form-label">Entidad Militar</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbFK" name="cbFK"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtDescripcion" class="col-3 col-form-label">Establecimiento Salud</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDescripcion" name="txtDescripcion" placeholder="Descripción Establecimiento" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/EstablecimientoSaludMGP">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

</div>

<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtCodigoEstablecimientoe" class="col-3 col-form-label">Código Establecimiento RENAES</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoEstablecimientoe" name="txtCodigoEstablecimientoe" placeholder="Código Establecimiento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCodigoRenaese" class="col-3 col-form-label">Código Renaes Mindef</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCodigoRenaese" name="txtCodigoRenaese" placeholder="Código Renaes" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtFKe" class="col-3 col-form-label">Entidad Militar</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="cbFKe" name="cbFKe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtDescripcione" class="col-3 col-form-label">Establecimiento Salud</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDescripcione" name="txtDescripcione" placeholder="Descripción Establecimiento" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/EstablecimientoSaludMGP">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

</div>


<div id="listar">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaEstablecimientoSaludMGP()" />
    <table class="table table-striped" id="tblEstablecimientoSaludMGPs" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Código Establecimiento RENAES</th>
                <th>Código Renaes Mindef</th>
                <th>Entidad Militar</th>
                <th>Establecimiento Salud</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/establecimientosaludmgp.js" asp-append-version="true"></script>
}