@{
    ViewData["Title"] = "Cuadro de Reporte del Consumo Mensual de Lubricantes en Puerto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ComfasConsumoMensualLubricantePuerto/Individual" style="text-decoration:none;">Cuadro de Reporte del Consumo Mensual de Lubricantes en Puerto</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNaval" name="cbUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Mes" class="col-3 col-form-label"><a href="~/Mes">Mes</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMes" name="cbMes"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LubricanteMotores" class="col-3 col-form-label">Lubricante Motores</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtLubricanteMotores" name="txtLubricanteMotores" placeholder="Lubricante Motores" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LubricanteReductores" class="col-3 col-form-label">Lubricante Reductores</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtLubricanteReductores" name="txtLubricanteReductores" placeholder="Lubricante Reductores" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TotalMensual" class="col-3 col-form-label">Total Mensual</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTotalMensual" name="txtTotalMensual" placeholder="Total Mensual" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TotalAnual" class="col-3 col-form-label">Total Anual</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTotalAnual" name="txtTotalAnual" placeholder="Total Anual" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfasConsumoMensualLubricantePuerto">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNavale" name="cbUnidadNavale"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Mes" class="col-3 col-form-label"><a href="~/Mes">Mes</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMese" name="cbMese"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LubricanteMotores" class="col-3 col-form-label">Lubricante Motores</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtLubricanteMotorese" name="txtLubricanteMotorese" placeholder="Lubricante Motores" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="LubricanteReductores" class="col-3 col-form-label">Lubricante Reductores</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtLubricanteReductorese" name="txtLubricanteReductorese" placeholder="Lubricante Reductores" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TotalMensual" class="col-3 col-form-label">Total Mensual</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTotalMensuale" name="txtTotalMensuale" placeholder="Total Mensual" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TotalAnual" class="col-3 col-form-label">Total Anual</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtTotalAnuale" name="txtTotalAnuale" placeholder="Total Anual" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfasConsumoMensualLubricantePuerto">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaComfasConsumoMensualLubricantePuerto()" />
    <div class="dropdown">
        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Modos de Carga :
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="~/ComfasConsumoMensualLubricantePuerto">Masiva</a>
            <a class="dropdown-item" href="~/ComfasConsumoMensualLubricantePuerto/Individual">Individual</a>
        </div>
    </div>
    <table class="table table-striped" id="tblComfasConsumoMensualLubricantePuerto" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Unidad</th>
                <th>Mes</th>
                <th>Lubricante Motores</th>
                <th>Lubricante Reductores</th>
                <th>Total Mensual</th>
                <th>Total Anual</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/comfas/comfas-consumomensuallubricantepuerto.js" asp-append-version="true"></script>
}
