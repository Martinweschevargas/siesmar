@{
    ViewData["Title"] = "Capacitación y Perfeccionamiento del Personal Civil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DiredumarCapacitacionPerfeccionamientoExtraC/Individual" style="text-decoration:none;">Capacitación y Perfeccionamiento del Personal Civil</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="CIPCapaPerfPCivil" class="col-3 col-form-label">CIP</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCIPCapaPerfPCivil" name="txtCIPCapaPerfPCivil" placeholder="CIP" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoDocumento" class="col-3 col-form-label">Tipo Documento</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtTipoDocumento" name="txtTipoDocumento" placeholder="Tipo Documento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNICapaPerfPCivil" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNICapaPerfPCivil" name="txtDNICapaPerfPCivil" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="GrupoOcupacionalCivil" class="col-3 col-form-label"><a href="~/GrupoOcupacionalCivil">Grado Ocupacional</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGrupoOcupacionalCivil" name="cbGrupoOcupacionalCivil"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NivelEstudio" class="col-3 col-form-label"><a href="~/NivelEstudio">Nivel de Estudio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbNivelEstudio" name="cbNivelEstudio"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="InstitucionEducativaSuperior" class="col-3 col-form-label"><a href="~/InstitucionEducativaSuperior">Institución Educativa</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbInstitucionEducativaSuperior" name="cbInstitucionEducativaSuperior"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MencionCapacitacion" class="col-3 col-form-label">Mención o Curso</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMencionCapacitacion" name="txtMencionCapacitacion" placeholder="Mención o Curso" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Financiamiento" class="col-3 col-form-label">Financiamiento</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtFinanciamiento" name="txtFinanciamiento" data-placeholder="Seleccione ...">
                            <option value="Institución">Institución</option>
                            <option value="Propio">Propio</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionLaboralCivil" class="col-3 col-form-label"><a href="~/CondicionLaboralCivil">Condición de Empleo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionLaboralCivil" name="cbCondicionLaboralCivil"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PaisUbigeo" class="col-3 col-form-label"><a href="~/PaisUbigeo">Pais</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPaisUbigeo" name="cbPaisUbigeo"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DiredumarCapacitacionPerfeccionamientoExtraC">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="CIPCapaPerfPCivil" class="col-3 col-form-label">CIP</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtCIPCapaPerfPCivile" name="txtCIPCapaPerfPCivile" placeholder="CIP" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="TipoDocumento" class="col-3 col-form-label">Tipo Documento</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtTipoDocumentoe" name="txtTipoDocumentoe" placeholder="Tipo Documento" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNICapaPerfPCivil" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNICapaPerfPCivile" name="txtDNICapaPerfPCivile" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="GrupoOcupacionalCivil" class="col-3 col-form-label"><a href="~/GrupoOcupacionalCivil">Grado Ocupacional</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGrupoOcupacionalCivile" name="cbGrupoOcupacionalCivile"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NivelEstudio" class="col-3 col-form-label"><a href="~/NivelEstudio">Nivel de Estudio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbNivelEstudioe" name="cbNivelEstudioe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="InstitucionEducativaSuperior" class="col-3 col-form-label"><a href="~/InstitucionEducativaSuperior">Institución Educativa</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbInstitucionEducativaSuperiore" name="cbInstitucionEducativaSuperiore"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MencionCapacitacion" class="col-3 col-form-label">Mención o Curso</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMencionCapacitacione" name="txtMencionCapacitacione" placeholder="Mención o Curso" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Financiamiento" class="col-3 col-form-label">Financiamiento</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtFinanciamientoe" name="txtFinanciamientoe" data-placeholder="Seleccione ...">
                            <option value="Institución">Institución</option>
                            <option value="Propio">Propio</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionLaboralCivil" class="col-3 col-form-label"><a href="~/CondicionLaboralCivil">Condición de Empleo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionLaboralCivile" name="cbCondicionLaboralCivile"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PaisUbigeo" class="col-3 col-form-label"><a href="~/PaisUbigeo">Pais</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPaisUbigeoe" name="cbPaisUbigeoe"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DiredumarCapacitacionPerfeccionamientoExtraC">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">           
    <p><a href="~/DiredumarCapacitacionPerfeccionamientoExtraC" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaDiredumarCapacitacionPerfeccionamientoExtraC()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>

    </div>
    <table class="table table-striped" id="tblDiredumarCapacitacionPerfeccionamientoExtraC" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>CIP</th>
                <th>Tipo Documento</th>
                <th>DNI</th>
                <th>Grupo Ocupacional Código</th>
                <th>Nivel de Estudio</th>
                <th>Institución Educativa</th>
                <th>Mención o Curso</th>
                <th>Financiamiento</th>
                <th>Condición de Empleo</th>
                <th>Pais</th>
                <th>Codigo Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts{
    <script src="/js/diredumar/diredumar-capacitacionperfeccionamientoextrac.js" asp-append-version="true"></script>
