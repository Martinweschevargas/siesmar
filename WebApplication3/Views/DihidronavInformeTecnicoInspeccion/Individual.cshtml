@{
    ViewData["Title"] = "Informes técnicos por inspección de término de obra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DihidronavInformeTecnicoInspeccion/Individual" style="text-decoration:none;">Informes técnicos por inspección de término de obra</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="form-group row col-md-6">
                <label for="carga" class="col-3 col-form-label">Carga</label>
                <div class="form-group row col-md-6">
                    <div class="col"><select class="form-select-sm form-control-sm" id="cargasR" name="cargasR"></select></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Orden" class="col-3 col-form-label">N° Orden</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtOrden" name="txtOrden" placeholder="N° Orden" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Informe" class="col-3 col-form-label">N° Informe Tecnico</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtInforme" name="txtInforme" placeholder="N° Informe Tecnico" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Obra" class="col-3 col-form-label"><a href="~/TipoObra">Informe Tecnico por Inspeccion de Termino de Obra</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbObra" name="cbObra"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Documento" class="col-3 col-form-label">Descripcion de la Inspeccion por Termino de Obra</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDocumento" name="txtDocumento" placeholder="Descripcion de la Inspeccion por Termino de Obra" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaEva" class="col-3 col-form-label">Fecha de Evaluacion</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaEva" name="txtFechaEva" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Solicitante" class="col-3 col-form-label">Empresa Solicitante</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSolicitante" name="txtSolicitante" placeholder="Empresa Solicitante" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Departamento" class="col-3 col-form-label"><a href="~/DepartamentoUbigeo">Departamento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDepartamento" name="cbDepartamento"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Provincia" class="col-3 col-form-label"><a href="~/ProvinciaUbigeo">Provincia</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbProvincia" name="cbProvincia"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Distrito" class="col-3 col-form-label"><a href="~/DistritoUbigeo">Distrito</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbDistrito" name="cbDistrito"></select>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DihidronavInformeTecnicoInspeccion">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
