@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/ComestreEvaluacionAlistamientoPersonalComestre" style="text-decoration:none;">Evaluacion del Alistamiento de Personal</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/ComestreEvaluacionAlistamientoPersonalComestre/Individual" class="btn btn-primary">Ir Carga Individual</a>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Mostrar Datos"</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Enviar Datos a BD</button>
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbData" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Unidad</th>
                                    <th>Fecha</th>
                                    <th>DNI</th>
                                    <th>CIP</th>
                                    <th>Cargo</th>
                                    <th>Grado Esperado</th>
                                    <th>Especialidad Esperado</th>
                                    <th>Grado Actual</th>
                                    <th>Especialidad Actual</th>
                                    <th>Grado Jerarquico</th>
                                    <th>Servicio o Experiencia</th>
                                    <th>Especializacion Profesional</th>
                                    <th>Cursos Profesionales Requeridos</th>
                                    <th>Puntaje Total Personal Evaluado</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/comestre/comestre-evaluacionalistamientopersonalcomestre.js" asp-append-version="true"></script>
}