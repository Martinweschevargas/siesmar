@{
    ViewData["Title"] = "Consumo Combustible";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/DiabasteConsumoCombustible/Individual" style="text-decoration:none;">Consumo de Combustible, Aceites y Grasas de las Unidades y Dependencias</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="Anio" class="col-3 col-form-label">Año</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtAnio" name="txtAnio" placeholder="Año" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Mes" class="col-3 col-form-label"><a href="~/Mes">Mes</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbMes" name="cbMes"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Mes" class="col-3 col-form-label"><a href="~/ClaseCombustible">Clase de Combustible</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbClaseCombustible" name="cbClaseCombustible"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="VehiculoGrupo" class="col-3 col-form-label"><a href="~/VehiculoServicioGrupo">Medio de Transporte</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbVehiculoGrupo" name="cbVehiculoGrupo"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Punto" class="col-3 col-form-label"><a href="~/PuntoDistribucionCombustible">Punto de Distribucion</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPunto" name="cbPunto"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="VehiculoTipo" class="col-3 col-form-label"><a href="~/VehiculoServicioTipo">Tipo de Vehiculo</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbVehiculoTipo" name="cbVehiculoTipo"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Presopuesto" class="col-3 col-form-label"><a href="~/TipoPresupuesto">Presopuesto</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPresopuesto" name="cbPresopuesto"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Combustible" class="col-3 col-form-label"><a href="~/CombustibleEspecificacion">Tipo de Combustible</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCombustible" name="cbCombustible"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Cantidad" class="col-3 col-form-label">Cantidad Consumida (Galones/Libras)</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtCantidad" name="txtCantidad" placeholder="Cantidad Consumida (Galones/Libras)" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Valor" class="col-3 col-form-label">Valor de la Cantidad Consumida (Soles) </label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtValor" name="txtValor" placeholder="Valor de la Cantidad Consumida (Soles) " required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/DiabasteConsumoCombustible">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
