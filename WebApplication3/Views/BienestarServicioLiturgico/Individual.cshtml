@{
    ViewData["Title"] = "Servicio Litúrgico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/BienestarServicioLiturgico/Individual" style="text-decoration:none;">Servicio Litúrgico</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">

                <div class="form-group row col-md-6">
                    <label for="FechaServicioLiturgico" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaServicioLiturgico" name="txtFechaServicioLiturgico" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNISolicitante" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtDNISolicitante" name="txtDNISolicitante" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalSolicitante" class="col-3 col-form-label"><a href="~/PersonalSolicitante">Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalSolicitante" name="cbPersonalSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionSolicitante" class="col-3 col-form-label"><a href="~/CondicionSolicitante">Condición del Personal</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionSolicitante" name="cbCondicionSolicitante"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="GradoPersonalMilitar" class="col-3 col-form-label"><a href="~/GradoPersonalMilitar">Grado del Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGradoPersonalMilitar" name="cbGradoPersonalMilitar"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalBeneficiado" class="col-3 col-form-label"><a href="~/PersonalBeneficiado">Beneficiarios</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiado" name="cbPersonalBeneficiado"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CategoriaPago" class="col-3 col-form-label"><a href="~/CategoriaPago">Categoría de Pago</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCategoriaPago" name="cbCategoriaPago"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ServicioReligioso" class="col-3 col-form-label"><a href="~/ServicioReligioso">Tipo de Servicio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbServicioReligioso" name="cbServicioReligioso"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarServicioLiturgico">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaServicioLiturgico" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaServicioLiturgicoe" name="txtFechaServicioLiturgicoe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNISolicitante" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtDNISolicitantee" name="txtDNISolicitantee" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalSolicitante" class="col-3 col-form-label"><a href="~/PersonalSolicitante">Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalSolicitantee" name="cbPersonalSolicitantee"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CondicionSolicitante" class="col-3 col-form-label"><a href="~/CondicionSolicitante">Condición del Personal</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCondicionSolicitantee" name="cbCondicionSolicitantee"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="GradoPersonalMilitar" class="col-3 col-form-label"><a href="~/GradoPersonalMilitar">Grado del Solicitante</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGradoPersonalMilitare" name="cbGradoPersonalMilitare"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PersonalBeneficiado" class="col-3 col-form-label"><a href="~/PersonalBeneficiado">Beneficiarios</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPersonalBeneficiadoe" name="cbPersonalBeneficiadoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CategoriaPago" class="col-3 col-form-label"><a href="~/CategoriaPago">Categoría de Pago</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCategoriaPagoe" name="cbCategoriaPagoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ServicioReligioso" class="col-3 col-form-label"><a href="~/ServicioReligioso">Tipo de Servicio</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbServicioReligiosoe" name="cbServicioReligiosoe"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarServicioLiturgico">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/BienestarServicioLiturgico" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaBienestarServicioLiturgico()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <hr />
    <table class="table table-striped" id="tblBienestarServicioLiturgico" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha</th>
                <th>DNI</th>
                <th>Solicitante</th>
                <th>Condición del Personal</th>
                <th>Grado del Solicitante</th>
                <th>Beneficiarios</th>
                <th>Categoría de Pago</th>
                <th>Tipo de Servicio</th>
                <th>Codigo Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/bienestar/bienestar-servicioliturgico.js" asp-append-version="true"></script>
}
