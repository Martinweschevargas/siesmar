@{
    ViewData["Title"] = "Alistamiento de Material";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ComescuamaAlistamientoMaterial/Individual" style="text-decoration:none;">Alistamiento de Material</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNaval" name="cbUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapacidadOperativa" class="col-3 col-form-label"><a href="~/CapacidadOperativa">Capacidad Operativa</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCapacidadOperativa" name="cbCapacidadOperativa"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistamientoMaterialRequerido3N" class="col-3 col-form-label"><a href="~/AlistamientoMaterialRequerido3N">Alistamiento Material Requerido</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistamientoMaterialRequerido3N" name="cbAlistamientoMaterialRequerido3N"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistMaterialRequeridoComescuama" class="col-3 col-form-label"><a href="~/AlistamientoMaterialRequeridoComescuama">Alistamiento Material Requerido Comescuama</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistMaterialRequeridoComescuama" name="cbAlistMaterialRequeridoComescuama"></select>
                    </div>
                </div>
                
                <div class="form-group row col-md-6">
                    <label for="PonderadoFuncional" class="col-3 col-form-label">Porcentaje Funcional</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPonderadoFuncional" name="txtPonderadoFuncional" placeholder="Porcentaje Funcional" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NivelAlistamientoParcial" class="col-3 col-form-label">Nivel De Alistamiento Parcial</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNivelAlistamientoParcial" name="txtNivelAlistamientoParcial" placeholder="Nivel de Alistamiento Parcial" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComescuamaAlistamientoMaterial">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNavale" name="cbUnidadNavale"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="CapacidadOperativa" class="col-3 col-form-label"><a href="~/CapacidadOperativa">Capacidad Operativa</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbCapacidadOperativae" name="cbCapacidadOperativae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistamientoMaterialRequerido3N" class="col-3 col-form-label"><a href="~/AlistamientoMaterialRequerido3N">Alistamiento Material Requerido</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistamientoMaterialRequerido3Ne" name="cbAlistamientoMaterialRequerido3Ne"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="AlistMaterialRequeridoComescuama" class="col-3 col-form-label"><a href="~/AlistamientoMaterialRequeridoComescuama">Alistamiento Material Requerido Comescuama</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbAlistMaterialRequeridoComescuamae" name="cbAlistMaterialRequeridoComescuamae"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PonderadoFuncional" class="col-3 col-form-label">Ponderado Funcional</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtPonderadoFuncionale" name="txtPonderadoFuncionale" placeholder="Nivel de Alistamiento Parcial" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NivelAlistamientoParcial" class="col-3 col-form-label">Nivel De Alistamiento Parcial</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNivelAlistamientoParciale" name="txtNivelAlistamientoParciale" placeholder="Nivel de Alistamiento Parcial" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComescuamaAlistamientoMaterial">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/ComescuamaAlistamientoMaterial" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaComescuamaAlistamientoMaterial()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <table class="table table-striped" id="tblComescuamaAlistamientoMaterial" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Unidad Naval</th>
                <th>Capacidad Operativa</th>
                <th>Alistamiento Material Requerido</th>
                <th>Alistamiento Material Requerido Comescuama</th>
                <th>Ponderado Funcional</th>
                <th>Nivel De Alistamiento Parcial</th>
                <th>Código Carga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/comescuama/comescuama-alistamientomaterial.js" asp-append-version="true"></script>
}
