@{
    ViewData["Title"] = "Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/CombasnaiMovilidadFlotaPesadaLiviana" style="text-decoration:none;">Situación de Movilidades de Flota Pesada y Liviana</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/CombasnaiMovilidadFlotaPesadaLiviana/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/CombasnaiMovilidadFlotaPesadaLiviana/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                </div>
            </div>
            <div class="card-body" >
                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control-file" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Vista Previa</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Guardar Formato</button>
                    </div>
                    <div class="col-sm-4">
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Código</th>
                                    <th>Nombre de la Unidad</th>
                                    <th>Clase</th>
                                    <th>Dependencia/Destino</th>
                                    <th>Ubicación</th>
                                    <th>Departamento</th>
                                    <th>Provincia</th>
                                    <th>Distrito</th>
                                    <th>Capacidad Operativa Requerida</th>
                                    <th>Condición</th>
                                    <th>Observación</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/combasnai/combasnai-movilidadflotapesadaliviana.js" asp-append-version="true"></script>
}