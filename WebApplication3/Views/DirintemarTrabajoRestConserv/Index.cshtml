@{
    ViewData["Title"] = "Trabajos de Restauración y/ó Conservación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h1><a href="~/DirintemarTrabajoRestConserv" style="text-decoration:none;">Trabajos de Restauración y/ó Conservación</a></h1>
        <div class="card">
            <div class="card-header">
                <div class="card-header">
                    <a href="~/DirintemarTrabajoRestConserv/Individual" class="btn btn-primary">Ir Carga Individual</a>
                    <a href="~/DirintemarTrabajoRestConserv/DownloadFile" class="btn btn-primary">Descargar Formato</a>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ventanaModal">Reportes</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <input class="form-control" type="file" id="inputExcel" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-warning" onclick="mostrarDatos()">Vista Previa</button>
                        <button class="btn btn-success" onclick="enviarDatos()">Guardar Formato</button>
                    </div>
                    <div class="col-sm-4">
                        <label>Numero de Registros : </label><span id="NumRegistros"></span>
                    </div>
                </div>
                <hr />
                <div class="row" style="overflow:scroll">
                    <div class="col-sm-12">
                        <table class="table table-striped" id="tbData" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
                            <thead>
                                <tr class="colorbg">
                                    <th>Trabajo bien Histórico</th>
                                    <th>N° Trabajo</th>
                                    <th>N° Pieza Tratada</th>
                                    <th>N° Persona Realiza Trabajo</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Termino</th>
                                    <th>Encargado Trabajo</th>
                                    <th>Descripción Trabajo Realizado</th>
                                    <th>Inversión Trabajo</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script src="/js/dirintemar/dirintemar-trabajorestconserv.js" asp-append-version="true"></script>
}