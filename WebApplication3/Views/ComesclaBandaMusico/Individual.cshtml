@{
    ViewData["Title"] = "Banda de Músicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ComesclaBandaMusico/Individual" style="text-decoration:none;">Banda de Músicos</a></h1>
<div id="nuevo" style="display:none;">
