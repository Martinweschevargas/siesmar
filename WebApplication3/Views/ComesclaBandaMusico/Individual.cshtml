                        <select class="form-control form-select-sm" id="cbTipoComision" name="cbTipoComision"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Evento" class="col-3 col-form-label"><a href="~/Evento">Evento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbEvento" name="cbEvento"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="SolicitudDocumentoReferencia" class="col-3 col-form-label">Solicitud/Documento De Referencia</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtSolicitudDocumentoReferencia" name="txtSolicitudDocumentoReferencia" placeholder="Solicitud/Documento De Referencia" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="InstitucionSolicitante" class="col-3 col-form-label">Institución/Dependencia Solicitante</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtInstitucionSolicitante" name="txtInstitucionSolicitante" placeholder="Institución/Dependencia Solicitante" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="GrupoComisionado" class="col-3 col-form-label"><a href="~/GrupoComisionado">Grupo Comisionado </a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbGrupoComisionado" name="cbGrupoComisionado"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="VestimentaUniforme" class="col-3 col-form-label">Vestimenta/Uniforme A Usar</label>
