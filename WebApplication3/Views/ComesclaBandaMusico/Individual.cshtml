                        <input type="text" class="form-control form-control-sm" id="txtVestimentaUniforme" name="txtVestimentaUniforme" placeholder="Vestimenta/Uniforme A Usar" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NombreEvento" class="col-3 col-form-label">Nombre Del Evento A Cubrir</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtNombreEvento" name="txtNombreEvento" placeholder="Nombre Del Evento A Cubrir" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Lugar" class="col-3 col-form-label">Lugar</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtLugar" name="txtLugar" placeholder="Lugar" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaHoraSalida" class="col-3 col-form-label">Fecha Y Hora De Salida</label>
                    <div class="col-md-9">
                        <input type="datetime" class="form-control form-control-sm" id="txtFechaHoraSalida" name="txtFechaHoraSalida" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaHoraInicio" class="col-3 col-form-label">Fecha Y Hora De Inicio</label>
                    <div class="col-md-9">
                        <input type="datetime" class="form-control form-control-sm" id="txtFechaHoraInicio" name="txtFechaHoraInicio" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="FechaHoraTermino" class="col-3 col-form-label">Fecha Y Hora De Termino</label>
                    <div class="col-md-9">
                        <input type="datetime" class="form-control form-control-sm" id="txtFechaHoraTermino" name="txtFechaHoraTermino" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="RequerimientoMovilidad" class="col-3 col-form-label">Requerimiento De Movilidad</label>
                    <div class="col-md-9">
                        <select class="form-select form-select-sm" id="txtRequerimientoMovilidad" name="txtRequerimientoMovilidad" data-placeholder="Seleccione ...">
                            <option value="S">SI</option>
                            <option value="N">NO</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Observaciones" class="col-3 col-form-label">Novedades/Observaciones</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtObservaciones" name="txtObservaciones" placeholder="Novedades/Observaciones" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComesclaBandaMusico">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
