@{
    ViewData["Title"] = "Cuadro de Registro de Visitas a la Fuerza de Superficie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/ComfasCuadroRegistroVisita/Individual" style="text-decoration:none;">Cuadro de Registro de Visitas a la Fuerza de Superficie</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="UnidadNaval" class="col-3 col-form-label"><a href="~/UnidadNaval">Unidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUnidadNaval" name="cbUnidadNaval"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="Fecha" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="HoraIngreso" class="col-3 col-form-label">Hora Ingreso</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtHoraIngreso" name="txtHoraIngreso" placeholder="Hora Ingreso" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="HoraSalida" class="col-3 col-form-label">Hora Salida</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtHoraSalida" name="txtHoraSalida" placeholder="Hora Salida" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIVisitante" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtDNIVisitante" name="txtDNIVisitante" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PasaporteVisitante" class="col-3 col-form-label">N° Pasasporte</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtPasaporteVisitante" name="txtPasaporteVisitante" placeholder="N° Pasasporte" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="PaisUbigeo" class="col-3 col-form-label"><a href="~/PaisUbigeo">Nacionalidad</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbPaisUbigeo" name="cbPaisUbigeo"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ClaseVisita" class="col-3 col-form-label"><a href="~/ClaseVisita">ClaseVisita</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbClaseVisita" name="cbClaseVisita"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MotivoViaje" class="col-3 col-form-label">Motivo</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMotivoViaje" name="txtMotivoViaje" placeholder="Motivo" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/ComfasCuadroRegistroVisita">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
