    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/EjercicioEntrenamientoComfoe" style="text-decoration:none;">Ejercicios Entrenamientos Comfoe</a></h1>

<div id="nuevo" style="display:none;">
