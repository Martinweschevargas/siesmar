@{
    ViewData["Title"] = "Visitas a Centros de Esparcimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1><a href="~/BienestarVisitaCentroEsparcimiento/Individual" style="text-decoration:none;">Visitas a Centros de Esparcimiento</a></h1>
<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-control-sm" id="cargasR" name="cargasR"></select>
                </div>
                <div class="col-sm-2">
                    <input type="date" class="form-control form-control-sm" id="txtFecha" name="txtFecha" required>
                </div>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaVisitaC" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaVisitaC" name="txtFechaVisitaC" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIUsuario" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNIUsuario" name="txtDNIUsuario" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="UsuarioCentroE" class="col-3 col-form-label"><a href="~/UsuarioCentroEsparcimiento">Tipo de Usuario</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUsuarioCentroE" name="cbUsuarioCentroE"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ClubEsparcimiento" class="col-3 col-form-label"><a href="~/ClubEsparcimiento">Centros de Esparcimiento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbClubEsparcimiento" name="cbClubEsparcimiento"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroHoras" class="col-3 col-form-label">Nª de Horas</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroHoras" name="txtNumeroHoras" placeholder="Nª de Horas" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroInvitados" class="col-3 col-form-label">Número de Invitados</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroInvitados" name="txtNumeroInvitados" placeholder="Número de Invitados" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoFacturado" class="col-3 col-form-label">Monto Facturado S/</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMontoFacturado" name="txtMontoFacturado" placeholder="Monto Facturado S/" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarVisitaCentroEsparcimiento">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="editar" style="display:none;">
    <form class="form-actualizacion" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <input type="hidden" id="txtCodigo" />
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Editar</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="FechaVisitaC" class="col-3 col-form-label">Fecha</label>
                    <div class="col-md-9">
                        <input type="date" class="form-control form-control-sm" id="txtFechaVisitaCe" name="txtFechaVisitaCe" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="DNIUsuario" class="col-3 col-form-label">DNI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtDNIUsuarioe" name="txtDNIUsuarioe" placeholder="DNI" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="UsuarioCentroE" class="col-3 col-form-label"><a href="~/UsuarioCentroEsparcimiento">Tipo de Usuario</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbUsuarioCentroEe" name="cbUsuarioCentroEe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="ClubEsparcimiento" class="col-3 col-form-label"><a href="~/ClubEsparcimiento">Centros de Esparcimiento</a></label>
                    <div class="col-md-9">
                        <select class="form-control form-select-sm" id="cbClubEsparcimientoe" name="cbClubEsparcimientoe"></select>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroHoras" class="col-3 col-form-label">Nª de Horas</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroHorase" name="txtNumeroHorase" placeholder="Nª de Horas" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="NumeroInvitados" class="col-3 col-form-label">Número de Invitados</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control form-control-sm" id="txtNumeroInvitadose" name="txtNumeroInvitadose" placeholder="Número de Invitados" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="MontoFacturado" class="col-3 col-form-label">Monto Facturado S/</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control form-control-sm" id="txtMontoFacturadoe" name="txtMontoFacturadoe" placeholder="Monto Facturado S/" required>
                    </div>
                </div>

            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/BienestarVisitaCentroEsparcimiento">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>
<div id="listar" style="overflow:scroll">
    <p><a href="~/BienestarVisitaCentroEsparcimiento" class="btn btn-primary">Ir Carga Masiva</a></p>
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaBienestarVisitaCentroEsparcimiento()" />
    <div class="row align-items-start">
        <div class="col">
            <select class="form-select form-control-sm" id="cargas" name="cargas"></select>
        </div>
        <div class="col">
            <button class="btn btn-primary" id="btn_search">Buscar</button>
            <button class="btn btn-primary" id="btn_all">Mostrar Todos</button>
            <button class="btn btn-danger" onclick="eliminarCarga()">Eliminar Carga</button>
        </div>
    </div>
    <hr />
    <table class="table table-striped" id="tblBienestarVisitaCentroEsparcimiento" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;overflow:scroll">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Fecha</th>
                <th>DNI</th>
                <th>Tipo de Usuario</th>
                <th>Centros de Esparcimiento</th>
                <th>Nª de Horas</th>
                <th>Número de Invitados</th>
                <th>Monto Facturado S/</th>
                <th>CodigoCarga</th>
                <th colspan="2" class="text-center">Acciones</th>
                <th class="ocultar"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    <script src="/js/bienestar/bienestar-visitacentroesparcimiento.js" asp-append-version="true"></script>
}
