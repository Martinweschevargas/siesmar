                </div>
                <div class="form-group row col-md-6">
                    <label for="txtObservacion" class="col-3 col-form-label">Observacion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtObservacione" name="txtObservacione" placeholder="Observacion" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/SituacionOperatividadEquipo">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

