                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtCodee" name="txtCodee" placeholder="Codigo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtUbicacion" class="col-3 col-form-label">Ubicacion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtUbicacione" name="txtUbicacione" placeholder="Ubicacion" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
