<div id="listar">
    <input type="button" value="NUEVO REGISTRO" class="nuevo" onclick="nuevaSituacionOperatividadEquipo()" />
    <table class="table table-striped" id="tblSituacionOperatividadEquipos" cellspacing="0" width="100%" style="font-family: Century Gothic; font-size:14px;">
        <thead>
            <tr class="colorbg">
                <th>Código</th>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Codigo Unidad</th>
                <th>Ubicacion</th>
                <th>Distrito</th>
                <th>Condicion</th>
                <th>Observacion</th>
