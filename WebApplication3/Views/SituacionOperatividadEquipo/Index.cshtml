@{
    ViewData["Title"] = "SituacionOperatividadEquipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><a href="~/SituacionOperatividadEquipo" style="text-decoration:none;">Situacion Operatividad Equipos</a></h1>


<div id="nuevo" style="display:none;">
    <form class="needs-validation" novalidate style="font-family: 'Century Gothic'; font-size:14px;">
        <div class="card" style="width: 100%;">
            <div class="card-header nuevo">
                <h4>Nuevo</h4>
            </div>
            <div class="row mt-2">
                <div class="form-group row col-md-6">
                    <label for="txtDescripcion" class="col-3 col-form-label">Descripcion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtDescripcion" name="txtDescripcion" placeholder="Descripción" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCantidad" class="col-3 col-form-label">Cantidad</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtCantidad" name="txtCantidad" placeholder="Cantidad" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCode" class="col-3 col-form-label">Codigo Unidad</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtCode" name="txtCode" placeholder="Codigo" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtUbicacion" class="col-3 col-form-label">Ubicacion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtUbicacion" name="txtUbicacion" placeholder="Ubicacion" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtDistrito" class="col-3 col-form-label">Distrito</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtDistrito" name="txtDistrito" placeholder="Distrito" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtCondicion" class="col-3 col-form-label">Condicion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtCondicion" name="txtCondicion" placeholder="Condicion" required>
                    </div>
                </div>
                <div class="form-group row col-md-6">
                    <label for="txtObservacion" class="col-3 col-form-label">Observacion</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txtObservacion" name="txtObservacion" placeholder="Observacion" required>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                </div>
                <div class="col-md-6 text-center">
                    <a class="btn btn-danger" href="~/SituacionOperatividadEquipo">Cancelar</a>
                </div>
            </div>
        </div>
    </form>

    <div class="loader" id="loader-6" style="display:none;">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>

</div>



